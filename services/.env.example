# ==========================================
# 数据库配置 (Database Configuration)
# ==========================================

# 数据库主机地址
# 本地开发: localhost
# 生产环境: 你的数据库服务器地址
DB_HOST=localhost

# 数据库端口
# MySQL 默认端口: 3306
DB_PORT=3306

# 数据库用户名
DB_USER=root

# 数据库密码
DB_PASS=your_password_here

# 数据库名称
DB_NAME=who_is_bot

# ==========================================
# 数据库连接池配置 (Connection Pool)
# ==========================================

# 连接池最大连接数 (默认: 10)
DB_CONNECTION_LIMIT=10

# 连接重试次数 (默认: 3)
DB_RETRY_ATTEMPTS=3

# 连接重试延迟（毫秒）(默认: 3000)
DB_RETRY_DELAY=3000

# 连接超时时间（毫秒）(默认: 10000)
DB_CONNECT_TIMEOUT=10000

# ==========================================
# 数据库 SSL 配置 (SSL Configuration)
# ==========================================

# 是否启用 SSL 连接 (生产环境推荐启用)
# 开发环境: false
# 生产环境: true
DB_SSL_ENABLED=false

# 是否验证 SSL 证书 (默认: true)
# 仅在 DB_SSL_ENABLED=true 时生效
DB_SSL_REJECT_UNAUTHORIZED=true

# ==========================================
# 数据库日志配置 (Logging)
# ==========================================

# 是否启用数据库查询日志
# 开发环境: true (便于调试)
# 生产环境: false (提高性能)
DB_LOGGING=false

# ==========================================
# 应用配置 (Application Configuration)
# ==========================================

# 应用运行端口
PORT=80

# Node 环境
# development | production | test
NODE_ENV=development

# ==========================================
# CORS 配置 (CORS Configuration)
# ==========================================

# 允许的跨域来源（逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# JWT 配置 (JWT Configuration)
# ==========================================

# JWT 密钥 (用于生成和验证 token)
# 生产环境请使用强密码
JWT_SECRET=your_jwt_secret_here_change_in_production

# JWT 过期时间 (例如: 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# ==========================================
# 微信小程序配置 (WeChat Mini Program)
# ==========================================

# 微信小程序 AppID (必填，用于微信登录)
WECHAT_APP_ID=your_wechat_app_id

# 微信小程序 AppSecret (必填，用于微信登录)
# 注意：AppSecret 是敏感信息，请勿泄露
WECHAT_APP_SECRET=your_wechat_app_secret
