/* components/icon/icon.wxss - Clean Geometric Icon System */

.antd-icon {
  display: inline-block;
  font-style: normal;
  line-height: 1;
  text-align: center;
  font-weight: normal;
  color: inherit;
  vertical-align: middle;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.antd-icon::before {
  display: inline-block;
}

