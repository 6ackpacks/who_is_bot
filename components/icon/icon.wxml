<!-- components/icon/icon.wxml - Simple Icon Component -->
<text class="antd-icon antd-icon-{{size}} {{customClass}}" style="{{customStyle}}">
  <!-- Trophy Icon -->
  <text wx:if="{{type === 'trophy'}}">🏆</text>

  <!-- Bar Chart Icon -->
  <text wx:if="{{type === 'bar-chart'}}">📊</text>

  <!-- ID Card Icon -->
  <text wx:if="{{type === 'idcard'}}">🎴</text>

  <!-- Appstore Icon -->
  <text wx:if="{{type === 'appstore'}}">⊞</text>

  <!-- Setting Icon -->
  <text wx:if="{{type === 'setting'}}">⚙</text>

  <!-- Info Circle Icon -->
  <text wx:if="{{type === 'info-circle'}}">ℹ</text>

  <!-- Check Circle Icon -->
  <text wx:if="{{type === 'check-circle'}}">✓</text>

  <!-- Close Circle Icon -->
  <text wx:if="{{type === 'close-circle'}}">✕</text>

  <!-- Moon Icon -->
  <text wx:if="{{type === 'moon'}}">🌙</text>

  <!-- Sun Icon -->
  <text wx:if="{{type === 'sun'}}">☀</text>
</text>
