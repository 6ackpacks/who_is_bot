/* app.wxss - 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: #333;
}

/* 通用容器 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 按钮样式 */
.btn-primary {
  background-color: #000;
  color: #fff;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.btn-secondary {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #e5e5e5;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-weight: bold;
  font-size: 28rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f0f0f0;
}

/* 文本样式 */
.text-primary {
  color: #000;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-bold {
  font-weight: bold;
}

/* 颜色变量 */
.color-red {
  color: #ef4444;
}

.color-blue {
  color: #3b82f6;
}

.color-green {
  color: #10b981;
}

.bg-red {
  background-color: #ef4444;
}

.bg-blue {
  background-color: #3b82f6;
}

.bg-green {
  background-color: #10b981;
}
