/* app.wxss - 全局样式 */
@import "styles/iconfont.wxss";
@import "styles/animations.wxss";

/* ===== Burgundy Theme System ===== */
page {
  /* Color Variables */
  --bg-cream: #F9F6F0;
  --text-dark: #2A2222;
  --primary-burgundy: #591C2E;
  --accent-rose: #E68D9F;
  --accent-rose-light: #FCEEF1;
  --accent-gold: #D4AF37;
  --ui-gray: #E5E0D8;
  --surface-white: #FFFFFF;

  /* Typography */
  --font-display: 'Playfair Display', 'Noto Serif SC', serif;
  --font-body: 'DM Sans', 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;

  /* Spacing & Sizing */
  --radius-soft: 24rpx;
  --radius-pill: 999rpx;

  /* Shadows */
  --shadow-sm: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  --shadow-md: 0 10rpx 20rpx rgba(0, 0, 0, 0.05);
  --shadow-lg: 0 20rpx 40rpx rgba(89, 28, 46, 0.15);

  /* Easing Functions */
  --ease-elastic: cubic-bezier(0.34, 1.56, 0.64, 1);
  --ease-smooth: cubic-bezier(0.2, 0.8, 0.2, 1);

  /* Apply Global Theme */
  background-color: var(--bg-cream);
  font-family: var(--font-body);
  color: var(--text-dark);
}

/* 通用容器 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 按钮样式 - Burgundy Theme */
.btn-primary {
  background-color: var(--primary-burgundy);
  color: var(--bg-cream);
  border-radius: var(--radius-pill);
  padding: 24rpx 48rpx;
  font-weight: bold;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.btn-secondary {
  background-color: var(--surface-white);
  color: var(--text-dark);
  border: 2rpx solid var(--ui-gray);
  border-radius: var(--radius-pill);
  padding: 24rpx 48rpx;
  font-weight: bold;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  transform: scale(0.96);
  background-color: var(--ui-gray);
}

/* 卡片样式 */
.card {
  background-color: var(--surface-white);
  border-radius: var(--radius-soft);
  box-shadow: 0 4rpx 16rpx rgba(89, 28, 46, 0.08);
  border: 2rpx solid var(--ui-gray);
}

/* 文本样式 */
.text-primary {
  color: var(--text-dark);
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-bold {
  font-weight: bold;
}

/* ===== Typography Utilities ===== */
.font-serif-display {
  font-family: var(--font-display);
}

.font-display {
  font-family: var(--font-display);
}

.font-body {
  font-family: var(--font-body);
}

/* ===== Color Utilities ===== */
/* Text Colors */
.text-burgundy {
  color: var(--primary-burgundy);
}

.text-rose {
  color: var(--accent-rose);
}

.text-gold {
  color: var(--accent-gold);
}

.text-dark {
  color: var(--text-dark);
}

.text-cream {
  color: var(--bg-cream);
}

/* Legacy color classes (for backward compatibility) */
.color-burgundy {
  color: var(--primary-burgundy);
}

.color-rose {
  color: var(--accent-rose);
}

.color-gold {
  color: var(--accent-gold);
}

/* Background Colors */
.bg-burgundy {
  background-color: var(--primary-burgundy);
}

.bg-rose {
  background-color: var(--accent-rose);
}

.bg-rose-light {
  background-color: var(--accent-rose-light);
}

.bg-gold {
  background-color: var(--accent-gold);
}

.bg-cream {
  background-color: var(--bg-cream);
}

.bg-white {
  background-color: var(--surface-white);
}

.bg-gray {
  background-color: var(--ui-gray);
}

/* ===== Shadow Utilities ===== */
.shadow-sm {
  box-shadow: var(--shadow-sm);
}

.shadow-md {
  box-shadow: var(--shadow-md);
}

.shadow-lg {
  box-shadow: var(--shadow-lg);
}

/* ===== Border Utilities ===== */
.border-soft {
  border-radius: var(--radius-soft);
}

.border-pill {
  border-radius: var(--radius-pill);
}

.border-burgundy {
  border-color: var(--primary-burgundy);
}

.border-rose {
  border-color: var(--accent-rose);
}

.border-gold {
  border-color: var(--accent-gold);
}

.border-gray {
  border-color: var(--ui-gray);
}

/* ===== Animation Utilities ===== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideInUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.animate-fade-in {
  animation: fadeIn 0.6s var(--ease-smooth) forwards;
}

.animate-slide-up {
  animation: slideInUp 0.6s var(--ease-smooth) forwards;
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

/* ===== Transition Utilities ===== */
.transition-smooth {
  transition: all 0.3s var(--ease-smooth);
}

.transition-elastic {
  transition: all 0.5s var(--ease-elastic);
}
