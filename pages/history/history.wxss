/* pages/history/history.wxss - 增强版判定历史页面 */

/* ===== 容器 ===== */
.history-container {
  width: 100%;
  min-height: 100vh;
  background-color: #F8F9FA;
}

.history-scroll {
  width: 100%;
  height: 100vh;
}

/* ===== 页面标题 ===== */
.page-header {
  background: #FFFFFF;
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.header-title {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.title-main {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInLeft 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.title-highlight {
  font-size: 48rpx;
  font-weight: 700;
  color: #3B82F6;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInLeft 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.header-subtitle {
  font-size: 24rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.5s ease-out 0.2s backwards;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
  box-shadow: 0 0 20rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  animation: fadeIn 0.3s ease-out;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.error-text {
  font-size: 28rpx;
  color: #6B7280;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn {
  padding: 20rpx 60rpx;
  background: #3B82F6;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  background: #2563EB;
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* ===== 历史记录列表 ===== */
.history-list {
  padding: 20rpx 40rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  animation: fadeIn 0.5s ease-out;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #6B7280;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.empty-hint {
  font-size: 26rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* ===== 历史记录项 ===== */
.history-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInLeft 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-item:nth-child(1) {
  animation-delay: 0.1s;
}

.history-item:nth-child(2) {
  animation-delay: 0.15s;
}

.history-item:nth-child(3) {
  animation-delay: 0.2s;
}

.history-item:nth-child(4) {
  animation-delay: 0.25s;
}

.history-item:nth-child(5) {
  animation-delay: 0.3s;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 历史记录头部 */
.history-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.history-type-badge {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-item:active .history-type-badge {
  transform: scale(0.9);
}

.history-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  font-family: "PingFang SC", -apple-system, sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  font-size: 24rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 判定结果 */
.history-result {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-item:active .history-result {
  transform: scale(0.9);
}

.result-correct {
  background: #10B981;
  color: #FFFFFF;
}

.result-wrong {
  background: #EF4444;
  color: #FFFFFF;
}

/* 用户选择 */
.history-choice {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.choice-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-left: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.choice-ai {
  background: #FEE2E2;
  color: #EF4444;
}

.choice-human {
  background: #DBEAFE;
  color: #3B82F6;
}

/* 详情提示 */
.detail-hint {
  font-size: 24rpx;
  color: #3B82F6;
  text-align: right;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-item:active .detail-hint {
  transform: translateX(4rpx);
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
