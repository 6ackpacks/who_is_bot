/* pages/feed/feed.wxss - 抖音式全屏滑动UI */

/* ===== 全屏容器 ===== */
.feed-container {
  width: 100vw;
  height: 100vh;
  background-color: #000;
}

.feed-swiper {
  width: 100%;
  height: 100%;
}

.feed-item {
  position: relative;
  width: 100%;
  height: 100%;
}

/* ===== 视频沉浸式样式 ===== */
.video-container {
  width: 100%;
  height: 100%;
  background-color: #000;
}

.full-video {
  width: 100%;
  height: 100%;
}

.video-overlay {
  position: absolute;
  bottom: 180rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 10;
}

.video-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.8);
  line-height: 1.4;
}

/* ===== 卡片流样式 ===== */
.card-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to bottom, #1a1a1a, #000);
}

.card-content {
  width: 85%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.3);
}

.card-image {
  width: 100%;
  height: 500rpx;
  display: block;
}

.card-text-area {
  padding: 40rpx;
}

.card-title {
  display: block;
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.card-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* ===== 判定按钮样式 ===== */
.action-bar {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 20;
}

.btn {
  flex: 1;
  margin: 0 15rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.3);
  transition: all 0.2s;
}

.btn::after {
  border: none;
}

.btn-bot {
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
  color: #ffffff;
}

.btn-human {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #ffffff;
}

.btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* ===== 结果覆盖层 ===== */
.result-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(10rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 30;
  padding: 60rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  animation: scaleIn 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes scaleIn {
  from {
    transform: scale(0);
  }
  to {
    transform: scale(1);
  }
}

.result-correct {
  background: linear-gradient(135deg, #52c41a, #73d13d);
}

.result-wrong {
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
}

.result-icon-text {
  font-size: 80rpx;
  color: #ffffff;
  font-weight: bold;
}

.result-title {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
  text-align: center;
}

.result-model {
  color: #ffd700;
  font-weight: bold;
}

.result-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.result-btn::after {
  border: none;
}

.result-btn-primary {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #ffffff;
}

.result-btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* ===== 详情页面样式 ===== */
.details-view {
  position: fixed;
  inset: 0;
  background: #ffffff;
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.details-header {
  position: sticky;
  top: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  height: 88rpx;
}

.details-back {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  color: #333;
}

.back-icon {
  font-size: 48rpx;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  margin-left: 8rpx;
}

.details-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.details-content {
  flex: 1;
  padding: 30rpx;
}

.details-summary {
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.summary-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.summary-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.summary-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.summary-bold {
  color: #1890ff;
  font-weight: bold;
}

.details-stats {
  margin-bottom: 30rpx;
}

.stats-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.stats-label-left,
.stats-label-right {
  font-size: 24rpx;
  color: #999;
}

.stats-bar-full {
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
}

.stats-fill-ai {
  background: linear-gradient(90deg, #ff4d4f, #ff7875);
  transition: width 0.5s ease;
}

.stats-fill-human {
  flex: 1;
  background: linear-gradient(90deg, #1890ff, #40a9ff);
}

.provider-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.provider-badge {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 15rpx;
}

.provider-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.provider-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.explanation-box {
  background: linear-gradient(135deg, #e6f7ff, #f0f5ff);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.explanation-icon {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 60rpx;
  color: rgba(24, 144, 255, 0.2);
}

.explanation-content {
  padding-left: 40rpx;
}

.explanation-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.explanation-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

.explanation-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(24, 144, 255, 0.2);
}

.explanation-label {
  font-size: 24rpx;
  color: #999;
}

.explanation-model {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: bold;
  background: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.comments-section {
  margin-bottom: 30rpx;
}

.comments-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.comments-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.comments-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-user {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.comment-likes {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #999;
}

.like-icon {
  font-size: 24rpx;
}

.like-count {
  font-size: 24rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.bottom-spacer {
  height: 150rpx;
}

.details-footer {
  position: sticky;
  bottom: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.next-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #ffffff;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.next-btn::after {
  border: none;
}

.next-arrow {
  margin-left: 10rpx;
  font-size: 32rpx;
}
