/* pages/feed/feed.wxss - 全屏沉浸式判定流 */

/* ===== 全屏容器 ===== */
.feed-container {
  width: 100vw;
  height: 100vh;
  background-color: #000;
  position: relative;
}

/* ===== 顶部分类标签 ===== */
.category-tabs {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 30;
  padding-top: 30rpx;
  padding-bottom: 60rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.8), transparent);
}

.tabs-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
}

.tab-item {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(255,255,255,0.6);
  transition: all 0.3s;
  padding-bottom: 8rpx;
  position: relative;
}

.tab-item.tab-active {
  color: #ffffff;
  transform: scale(1.05);
  border-bottom: 4rpx solid #10B981;
}

.tab-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255,255,255,0.2);
}

/* ===== Swiper ===== */
.feed-swiper {
  width: 100%;
  height: 100%;
}

.feed-item {
  position: relative;
  width: 100%;
  height: 100%;
}

/* ===== 内容区域 ===== */
.content-wrapper {
  width: 100%;
  height: 100%;
  background-color: #000;
}

.full-video,
.full-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 文本内容 */
.text-content {
  background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.quote-icon {
  font-size: 80rpx;
  color: #d1d5db;
  font-family: Georgia, serif;
  margin-bottom: 40rpx;
}

.text-content-body {
  font-size: 40rpx;
  line-height: 1.8;
  color: #1f2937;
  font-family: serif;
  text-align: center;
}

/* ===== 渐变遮罩 ===== */
.gradient-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 50%, transparent 100%);
  pointer-events: none;
  z-index: 5;
}

/* ===== 底部信息 ===== */
.content-info {
  position: absolute;
  bottom: 250rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 10;
  pointer-events: none;
}

.info-tags {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.tag-type {
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(20rpx);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #ffffff;
  text-transform: uppercase;
  border: 1rpx solid rgba(255,255,255,0.1);
}

.tag-provider {
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.8);
}

.info-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.8);
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.info-subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.8);
  line-height: 1.4;
}

/* ===== 判定按钮 ===== */
.judgment-buttons {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 100rpx;
}

.btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
}

.btn-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.3);
  transition: transform 0.2s;
}

.btn-circle:active {
  transform: scale(0.9);
}

.btn-icon {
  font-size: 64rpx;
  font-weight: bold;
}

.btn-ai .btn-icon {
  color: #EF4444;
}

.btn-human .btn-icon {
  color: #3B82F6;
}

.btn-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.5);
  background: rgba(0,0,0,0.2);
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  backdrop-filter: blur(10rpx);
}

/* ===== 结果贴纸 ===== */
.result-sticker {
  position: absolute;
  bottom: 60rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 20;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.sticker-accent {
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: #10B981;
  border-radius: 16rpx 0 0 16rpx;
}

.sticker-content {
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(40rpx);
  border: 2rpx solid rgba(255,255,255,0.2);
  border-radius: 32rpx;
  padding: 30rpx;
  padding-left: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.4);
}

.sticker-header {
  margin-bottom: 15rpx;
}

.sticker-title {
  font-size: 40rpx;
  font-weight: 900;
  font-style: italic;
}

.title-correct {
  color: #10B981;
}

.title-wrong {
  color: #EF4444;
}

.sticker-explanation {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  line-height: 1.6;
  margin-bottom: 25rpx;
  display: block;
  font-weight: 500;
}

.sticker-actions {
  display: flex;
  gap: 20rpx;
}

.sticker-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx 30rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.2s;
}

.sticker-btn:active {
  transform: scale(0.95);
}

.sticker-btn-primary {
  flex: 1;
  background: #ffffff;
  color: #000000;
}

.sticker-btn-next {
  width: 90rpx;
  background: rgba(255,255,255,0.2);
  color: #ffffff;
}

.btn-icon-small {
  font-size: 28rpx;
}

.next-icon {
  font-size: 40rpx;
  transform: rotate(-90deg);
}

/* ===== 详情抽屉 ===== */
.details-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 40;
  display: flex;
  flex-direction: column;
}

.drawer-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 41;
}

.drawer-content {
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-radius: 48rpx 48rpx 0 0;
  z-index: 42;
  display: flex;
  flex-direction: column;
  animation: drawerSlideUp 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes drawerSlideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.drawer-handle {
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.handle-bar {
  width: 80rpx;
  height: 8rpx;
  background: #d1d5db;
  border-radius: 999rpx;
}

.drawer-scroll {
  flex: 1;
  padding: 0 45rpx;
  padding-bottom: 160rpx;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.drawer-title {
  font-size: 48rpx;
  font-weight: 900;
  color: #111827;
}

.status-badge {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.badge-ai {
  background: rgba(239,68,68,0.1);
  color: #EF4444;
}

.badge-human {
  background: rgba(59,130,246,0.1);
  color: #3B82F6;
}

.model-info-card {
  background: #f9fafb;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
}

.model-info-left,
.model-info-right {
  display: flex;
  flex-direction: column;
}

.model-info-right {
  align-items: flex-end;
}

.model-label {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.model-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.model-rate {
  font-size: 40rpx;
  font-weight: 900;
  color: #10B981;
}

.analysis-section {
  margin-bottom: 50rpx;
}

.analysis-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.analysis-icon {
  font-size: 32rpx;
  color: #10B981;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #111827;
}

.analysis-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.8;
  text-align: justify;
}

.divider {
  height: 2rpx;
  background: #e5e7eb;
  margin-bottom: 40rpx;
}

.comments-section {
  margin-bottom: 30rpx;
}

.comments-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 30rpx;
  display: block;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #e5e7eb;
  flex-shrink: 0;
}

.comment-body {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
}

.official-badge {
  font-size: 20rpx;
  background: #dbeafe;
  color: #2563eb;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

.comment-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
}

.comment-likes {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
  color: #9ca3af;
}

.like-icon {
  font-size: 28rpx;
}

.like-count {
  font-size: 20rpx;
}

.bottom-spacer {
  height: 100rpx;
}

.drawer-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #ffffff;
  border-top: 2rpx solid #e5e7eb;
  z-index: 43;
}

.next-button {
  width: 100%;
  height: 96rpx;
  background: #000000;
  color: #ffffff;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2);
  transition: transform 0.2s;
}

.next-button:active {
  transform: scale(0.98);
}

.arrow-icon {
  font-size: 32rpx;
}
