/* pages/feed/feed-enhanced.wxss - 优化版设计 */

/* ===== 容器 - 更暗的背景 ===== */
.feed-container {
  width: 100vw;
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0A0F1E 50%, #0F1419 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 - 简化的光晕效果 */
.feed-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 30% 20%, rgba(0, 150, 200, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 70% 80%, rgba(100, 80, 200, 0.06) 0%, transparent 50%);
  pointer-events: none;
}

/* 赛博朋克网格背景 */
.feed-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    linear-gradient(rgba(0, 212, 255, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 212, 255, 0.05) 1px, transparent 1px);
  background-size: 50rpx 50rpx;
  pointer-events: none;
  opacity: 0.6;
}

.feed-scroll {
  width: 100%;
  height: 100vh;
  position: relative;
  z-index: 1;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  animation: fadeIn 0.3s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: #00D4FF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
  box-shadow: 0 0 20rpx rgba(0, 212, 255, 0.3);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  animation: fadeIn 0.3s ease-out;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.8;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn {
  padding: 24rpx 60rpx;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(0, 212, 255, 0.3);
}

/* ===== 判定视图 ===== */
.judgment-view {
  padding: 40rpx 32rpx 140rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  animation: fadeIn 0.4s ease-out;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-align: center;
  margin-bottom: 40rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  flex-shrink: 0;
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* ===== 内容区域 - 移除引号重叠 ===== */
.content-wrapper {
  width: 100%;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  max-height: 55vh;
  overflow: hidden;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

/* 移除引号或调整位置避免遮挡 */
.quote-icon {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.1);
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 16rpx;
  padding-left: 20rpx;
  flex-shrink: 0;
  animation: fadeIn 0.4s ease-out 0.2s backwards;
}

/* ===== 内容卡片 - 增加间距和对比度 ===== */
.content-card {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow:
    0 4rpx 24rpx rgba(0, 0, 0, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  position: relative;
  overflow-y: auto;
  max-height: 45vh;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.content-card:active {
  transform: scale(0.99);
}

/* 图片卡片 */
.content-card.image-card {
  padding: 0;
  background: transparent;
  backdrop-filter: none;
  box-shadow: none;
  overflow: visible;
  max-height: none;
}

.content-image-wrapper {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.6),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  width: 100%;
  max-height: 50vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000000;
}

.content-image {
  width: 100%;
  height: 50vh;
  display: block;
  animation: fadeIn 0.5s ease-out;
}

.content-video {
  width: 100%;
  height: 50vh;
  display: block;
  background: #000000;
  border-radius: 24rpx;
}

/* 文字内容 - 提高可读性 */
.content-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.95);
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: block;
  animation: fadeIn 0.5s ease-out 0.3s backwards;
}

/* ===== 来源信息 - 增加间距 ===== */
.source-info {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  margin-bottom: 40rpx;
  margin-top: 24rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.4s ease-out 0.3s backwards;
}

/* ===== 判定按钮 ===== */
.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
  padding: 0 10rpx;
  flex-shrink: 0;
  margin-top: 30rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.btn-judge {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
}

.btn-judge::after {
  border: none;
}

.btn-judge:active {
  transform: scale(0.96);
}

.btn-ai {
  background: linear-gradient(135deg, #FF4444 0%, #CC0000 100%);
  color: #FFFFFF;
}

.btn-ai:active {
  box-shadow: 0 2rpx 8rpx rgba(255, 68, 68, 0.4);
}

.btn-human {
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
}

.btn-human:active {
  box-shadow: 0 2rpx 8rpx rgba(0, 212, 255, 0.4);
}

/* ===== 结果视图 - 优化间距 ===== */
.result-view {
  padding: 40rpx 32rpx 120rpx;
  min-height: 100vh;
  animation: fadeIn 0.4s ease-out;
}

.result-header {
  margin-bottom: 40rpx;
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1.6;
}

/* 结果视图的内容卡片 - 清晰分离 */
.content-card-wrapper {
  position: relative;
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.content-card-wrapper .quote-icon {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.1);
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 16rpx;
  padding-left: 20rpx;
  display: block;
}

/* ===== 统计条 ===== */
.stats-bar {
  display: flex;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.stat-item {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.stat-ai {
  background: linear-gradient(135deg, #FF4444 0%, #CC0000 100%);
}

.stat-human {
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
}

.stat-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* ===== 解析说明 - 优化布局避免遮挡 ===== */
.explanation-box {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.explanation-box:active {
  transform: scale(0.99);
}

.explanation-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  display: block;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.explanation-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 评论区域 - 优化布局 ===== */
.comments-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.comments-header {
  margin-bottom: 24rpx;
}

.comments-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 评论输入框 - 提高对比度 */
.comment-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  padding: 8rpx 8rpx 8rpx 24rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.comment-input-wrapper:focus-within {
  background: rgba(255, 255, 255, 0.12);
  box-shadow: 0 4rpx 16rpx rgba(0, 212, 255, 0.2);
  border-color: rgba(0, 212, 255, 0.3);
}

.comment-input {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-family: "PingFang SC", -apple-system, sans-serif;
  min-height: 64rpx;
  line-height: 64rpx;
}

.comment-submit-btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 212, 255, 0.3);
}

.comment-submit-btn::after {
  border: none;
}

.comment-submit-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 212, 255, 0.3);
}

/* 评论列表 - 增加间距 */
.comments-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-comments {
  padding: 60rpx 0;
  text-align: center;
  animation: fadeIn 0.5s ease-out;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 评论项 - 清晰的卡片样式 */
.comment-item {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.06);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInLeft 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.comment-item:active {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(0.99);
}

.comment-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.1);
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  border: 2px solid rgba(255, 255, 255, 0.1);
}

.comment-item:active .comment-avatar {
  transform: scale(0.95);
}

.comment-main {
  flex: 1;
  min-width: 0;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.comment-nickname {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-level {
  font-size: 22rpx;
  color: #000000;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  font-weight: 600;
}

.comment-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-left: auto;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-content {
  font-size: 28rpx;
  line-height: 1.7;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 16rpx;
  word-wrap: break-word;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 评论操作按钮 */
.comment-actions {
  display: flex;
  gap: 32rpx;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 0;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
}

.action-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: color 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn:active .action-text {
  color: #00D4FF;
}

/* 回复列表 */
.replies-list {
  margin-top: 16rpx;
  padding-left: 24rpx;
  border-left: 2px solid rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.reply-item {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.3s ease-out;
}

.reply-author {
  color: #00D4FF;
  font-weight: 600;
  flex-shrink: 0;
}

.reply-content {
  color: rgba(255, 255, 255, 0.8);
  flex: 1;
  word-wrap: break-word;
}

.reply-actions {
  display: flex;
  align-items: center;
  margin-left: auto;
  flex-shrink: 0;
}

.reply-likes {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* ===== 底部按钮 ===== */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
}

.btn-secondary {
  flex: 1;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.12);
  transform: scale(0.97);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.btn-primary {
  flex: 1;
  height: 96rpx;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 212, 255, 0.3);
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(0, 212, 255, 0.3);
}

