/* pages/feed/feed.wxss - Digital Forensics Lab Style */

/* ===== Grid Background ===== */
.feed-container {
  width: 100vw;
  height: 100vh;
  background-color: #F8F9FA;
  background-image:
    linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
  background-size: 20px 20px;
  position: relative;
}

/* ===== Loading State ===== */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #000000;
  font-weight: 600;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== Error State ===== */
.error-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  padding: 0 60rpx;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #000000;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.retry-btn {
  padding: 20rpx 60rpx;
  background: #000000;
  color: #ffffff;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 900;
  font-style: italic;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  background: #333333;
  transform: skewX(-5deg) scale(0.98);
}

/* ===== Category Tabs ===== */
.category-tabs {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 30;
  padding: 20rpx 30rpx;
  background: rgba(248, 249, 250, 0.95);
  backdrop-filter: blur(10rpx);
  border-bottom: 3rpx solid #000000;
}

.tabs-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
}

.tab-item {
  font-size: 28rpx;
  font-weight: 900;
  font-style: italic;
  color: rgba(0, 0, 0, 0.3);
  transition: all 0.3s;
  padding: 8rpx 16rpx;
  position: relative;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

.tab-item.tab-active {
  color: #000000;
  transform: skewX(-5deg) scale(1.05);
  background: #000000;
  color: #FFFFFF;
}

.tab-divider {
  width: 2rpx;
  height: 24rpx;
  background: rgba(0, 0, 0, 0.2);
}

/* ===== Swiper ===== */
.feed-swiper {
  width: 100%;
  height: 100%;
}

.feed-item {
  position: relative;
  width: 100%;
  height: 100%;
}

/* ===== Content Area ===== */
.content-wrapper {
  width: 100%;
  height: 100%;
  background-color: #F8F9FA;
  position: relative;
}

.full-video,
.full-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Text Content - Card Style */
.text-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 140rpx 40rpx 300rpx;
  background-color: #F8F9FA;
}

.text-content-card {
  width: 100%;
  max-width: 650rpx;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  box-shadow: 12rpx 12rpx 0 0 rgba(0, 0, 0, 0.1);
  padding: 50rpx 40rpx;
  min-height: 400rpx;
  position: relative;
}

.quote-icon {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 60rpx;
  color: #000000;
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
}

.text-content-body {
  font-size: 32rpx;
  line-height: 1.8;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-align: left;
  font-weight: 500;
  padding-left: 60rpx;
  padding-top: 20rpx;
}

/* ===== Content Info ===== */
.content-info {
  position: absolute;
  bottom: 240rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 10;
  pointer-events: none;
}

.info-tags {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.tag-type {
  background: #000000;
  padding: 8rpx 16rpx;
  border-radius: 0;
  font-size: 18rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFFFFF;
  text-transform: uppercase;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

.tag-provider {
  color: #000000;
  font-size: 20rpx;
  font-weight: 600;
  font-family: "PingFang SC", -apple-system, sans-serif;
  background: rgba(255, 255, 255, 0.95);
  padding: 6rpx 12rpx;
  border: 2rpx solid #000000;
}

.info-title {
  font-size: 36rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 8rpx;
  line-height: 1.3;
  font-family: "PingFang SC", -apple-system, sans-serif;
  background: rgba(255, 255, 255, 0.95);
  padding: 8rpx 16rpx;
  display: inline-block;
  border: 3rpx solid #000000;
  transform: skewX(-3deg);
  max-width: 90%;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.info-subtitle {
  font-size: 22rpx;
  color: #000000;
  line-height: 1.4;
  font-family: "PingFang SC", -apple-system, sans-serif;
  background: rgba(255, 255, 255, 0.9);
  padding: 6rpx 12rpx;
  display: inline-block;
  border: 2rpx solid #000000;
}

/* ===== Judgment Buttons ===== */
.judgment-buttons {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
}

.btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.btn-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 0;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 8rpx 8rpx 0 0 rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
  transform: skewX(-5deg);
}

.btn-circle:active {
  transform: skewX(-5deg) scale(0.95);
  box-shadow: 4rpx 4rpx 0 0 rgba(0, 0, 0, 0.2);
}

.btn-icon {
  font-size: 56rpx;
  font-weight: 900;
  transform: skewX(5deg);
}

.btn-ai .btn-icon {
  color: #EF4444;
}

.btn-human .btn-icon {
  color: #3B82F6;
}

.btn-label {
  font-size: 24rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  background: #FFFFFF;
  padding: 8rpx 20rpx;
  border-radius: 0;
  border: 3rpx solid #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

/* ===== Result Sticker ===== */
.result-sticker {
  position: absolute;
  bottom: 80rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 20;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.sticker-accent {
  position: absolute;
  top: 0;
  left: 0;
  width: 12rpx;
  height: 100%;
  background: #000000;
}

.sticker-content {
  background: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 0;
  padding: 30rpx;
  padding-left: 50rpx;
  box-shadow: 12rpx 12rpx 0 0 rgba(0, 0, 0, 0.15);
}

.sticker-header {
  margin-bottom: 15rpx;
}

.sticker-title {
  font-size: 40rpx;
  font-weight: 900;
  font-style: italic;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
  display: inline-block;
}

.title-correct {
  color: #10B981;
}

.title-wrong {
  color: #EF4444;
}

.sticker-explanation {
  font-size: 26rpx;
  color: #000000;
  line-height: 1.6;
  margin-bottom: 25rpx;
  display: block;
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.sticker-actions {
  display: flex;
  gap: 20rpx;
}

.sticker-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx 30rpx;
  border-radius: 0;
  font-size: 24rpx;
  font-weight: 900;
  font-style: italic;
  transition: all 0.2s;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

.sticker-btn:active {
  transform: skewX(-5deg) scale(0.95);
}

.sticker-btn-primary {
  flex: 1;
  background: #000000;
  color: #FFFFFF;
  border: 4rpx solid #000000;
}

.sticker-btn-next {
  width: 90rpx;
  height: 90rpx;
  background: #FFFFFF;
  color: #000000;
  border: 4rpx solid #000000;
  border-radius: 0;
  padding: 0;
}

.next-icon {
  font-size: 40rpx;
  font-weight: 900;
  transform: rotate(-90deg) skewX(5deg);
}

.btn-icon-small {
  font-size: 28rpx;
  transform: skewX(5deg);
}

/* ===== Details Drawer ===== */
.details-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 40;
  display: flex;
  flex-direction: column;
}

.drawer-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 41;
}

.drawer-content {
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  bottom: 0;
  background: #F8F9FA;
  border-radius: 0;
  border-top: 4rpx solid #000000;
  z-index: 42;
  display: flex;
  flex-direction: column;
  animation: drawerSlideUp 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  overflow: hidden;
}

@keyframes drawerSlideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.drawer-handle {
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  background: #F8F9FA;
}

.handle-bar {
  width: 80rpx;
  height: 8rpx;
  background: #000000;
  border-radius: 0;
}

.drawer-scroll {
  flex: 1;
  padding: 0 45rpx 160rpx 45rpx;
  box-sizing: border-box;
  width: 100%;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.drawer-title {
  font-size: 48rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

.status-badge {
  padding: 12rpx 24rpx;
  border-radius: 0;
  font-size: 24rpx;
  font-weight: 900;
  font-style: italic;
  border: 3rpx solid;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
}

.badge-ai {
  background: #FFFFFF;
  color: #EF4444;
  border-color: #EF4444;
}

.badge-human {
  background: #FFFFFF;
  color: #3B82F6;
  border-color: #3B82F6;
}

.model-info-card {
  background: #FFFFFF;
  border: 3rpx solid #000000;
  border-radius: 0;
  padding: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 6rpx 6rpx 0 0 rgba(0, 0, 0, 0.1);
}

.model-info-left,
.model-info-right {
  display: flex;
  flex-direction: column;
}

.model-info-right {
  align-items: flex-end;
}

.model-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 900;
  font-style: italic;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.model-name {
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.model-rate {
  font-size: 40rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.analysis-section {
  margin-bottom: 50rpx;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.analysis-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.analysis-icon {
  font-size: 32rpx;
  color: #000000;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.analysis-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  text-align: justify;
  word-wrap: break-word;
  overflow-wrap: break-word;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.divider {
  height: 3rpx;
  background: #000000;
  margin-bottom: 40rpx;
}

.comments-section {
  margin-bottom: 30rpx;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 30rpx;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
  background: #FFFFFF;
  padding: 20rpx;
  border: 2rpx solid #000000;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 0;
  background: #000000;
  flex-shrink: 0;
  border: 2rpx solid #000000;
}

.comment-body {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: 900;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.official-badge {
  font-size: 20rpx;
  background: #000000;
  color: #FFFFFF;
  padding: 4rpx 12rpx;
  border-radius: 0;
  font-weight: 900;
  font-style: italic;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-likes {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
  color: #000000;
}

.like-icon {
  font-size: 28rpx;
}

.like-count {
  font-size: 20rpx;
  font-weight: 900;
}

.bottom-spacer {
  height: 100rpx;
}

.drawer-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #F8F9FA;
  border-top: 3rpx solid #000000;
  z-index: 43;
}

.next-button {
  width: 100%;
  height: 96rpx;
  background: #000000;
  color: #FFFFFF;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  box-shadow: 8rpx 8rpx 0 0 rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transform: skewX(-5deg);
  border: 4rpx solid #000000;
}

.next-button:active {
  transform: skewX(-5deg) scale(0.98);
  box-shadow: 4rpx 4rpx 0 0 rgba(0, 0, 0, 0.2);
}

.arrow-icon {
  font-size: 32rpx;
  transform: skewX(5deg);
}
