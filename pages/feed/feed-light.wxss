/* pages/feed/feed.wxss - 增强版卡片式设计 */

/* ===== 容器 ===== */
.feed-container {
  width: 100vw;
  min-height: 100vh;
  background-color: #FFFFFF;
}

.feed-scroll {
  width: 100%;
  height: 100vh;
}

/* 判定状态下禁用滚动 */
.feed-scroll:has(.judgment-view) {
  overflow: hidden;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  animation: fadeIn 0.3s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
  box-shadow: 0 0 20rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  padding: 0 60rpx;
  animation: fadeIn 0.3s ease-out;
}

.error-text {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn {
  padding: 20rpx 60rpx;
  background: #3B82F6;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  background: #2563EB;
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* ===== 判定视图 ===== */
.judgment-view {
  padding: 30rpx 32rpx 140rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  animation: fadeIn 0.4s ease-out;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #000000;
  text-align: center;
  margin-bottom: 40rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  flex-shrink: 0;
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* ===== 内容区域（引号+卡片） ===== */
.content-wrapper {
  width: 100%;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  max-height: 55vh;
  overflow: hidden;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.quote-icon {
  font-size: 100rpx;
  color: #D8D8D8;
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
  margin-bottom: -15rpx;
  padding-left: 20rpx;
  flex-shrink: 0;
  animation: fadeIn 0.4s ease-out 0.2s backwards;
}

/* ===== 内容卡片 ===== */
.content-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow-y: auto;
  max-height: 45vh;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.content-card:active {
  transform: scale(0.99);
}

/* 图片卡片 - 立体效果 */
.content-card.image-card {
  padding: 0;
  background: transparent;
  box-shadow: none;
  overflow: visible;
  max-height: none;
}

.content-image-wrapper {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow:
    0 8rpx 16rpx rgba(0, 0, 0, 0.12),
    0 20rpx 40rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  max-height: 50vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.content-image {
  width: 100%;
  height: 50vh;
  display: block;
  animation: fadeIn 0.5s ease-out;
}

.content-video {
  width: 100%;
  height: 50vh;
  display: block;
  background: #000000;
  border-radius: 24rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.7;
  color: #1F2937;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: block;
  animation: fadeIn 0.5s ease-out 0.3s backwards;
}

/* ===== 来源信息 ===== */
.source-info {
  font-size: 24rpx;
  color: #9CA3AF;
  text-align: center;
  margin-bottom: 40rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.4s ease-out 0.3s backwards;
}

/* ===== 判定按钮 ===== */
.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
  padding: 0 10rpx;
  flex-shrink: 0;
  margin-top: 20rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.btn-judge {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.btn-judge::after {
  border: none;
}

.btn-judge:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-ai {
  background: #EF4444;
  color: #FFFFFF;
}

.btn-ai:active {
  background: #DC2626;
}

.btn-human {
  background: #3B82F6;
  color: #FFFFFF;
}

.btn-human:active {
  background: #2563EB;
}

/* ===== 结果视图 ===== */
.result-view {
  padding: 40rpx 40rpx 120rpx;
  min-height: 100vh;
  animation: fadeIn 0.4s ease-out;
}

.result-header {
  margin-bottom: 30rpx;
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 结果视图的内容卡片包装器 */
.content-card-wrapper {
  position: relative;
  margin-bottom: 30rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.content-card-wrapper .quote-icon {
  position: static;
  font-size: 100rpx;
  color: #D8D8D8;
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
  margin-bottom: -15rpx;
  padding-left: 20rpx;
  display: block;
}

/* ===== 统计条 ===== */
.stats-bar {
  display: flex;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.stat-item {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.stat-ai {
  background: #EF4444;
}

.stat-human {
  background: #3B82F6;
}

.stat-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 解析说明 ===== */
.explanation-box {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.explanation-box:active {
  transform: scale(0.99);
}

.explanation-label {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
  margin-bottom: 15rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.explanation-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 社区区域 ===== */
.community-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.community-header {
  margin-bottom: 20rpx;
}

.community-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.community-card {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.community-card:active {
  transform: scale(0.98);
  background: #F3F4F6;
}

.community-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #10B981;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.community-content {
  flex: 1;
}

.community-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  display: block;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.community-desc {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.5;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 评论区域 ===== */
.comments-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.comments-header {
  margin-bottom: 20rpx;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 评论输入框 */
.comment-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 30rpx;
  background: #F8F9FA;
  border-radius: 48rpx;
  padding: 8rpx 8rpx 8rpx 24rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.comment-input-wrapper:focus-within {
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
}

.comment-input {
  flex: 1;
  font-size: 28rpx;
  color: #1F2937;
  font-family: "PingFang SC", -apple-system, sans-serif;
  min-height: 64rpx;
  line-height: 64rpx;
}

.comment-submit-btn {
  padding: 16rpx 32rpx;
  background: #3B82F6;
  color: #FFFFFF;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.comment-submit-btn::after {
  border: none;
}

.comment-submit-btn:active {
  background: #2563EB;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(59, 130, 246, 0.3);
}

/* 评论列表 */
.comments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.empty-comments {
  padding: 60rpx 0;
  text-align: center;
  animation: fadeIn 0.5s ease-out;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 评论项 */
.comment-item {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInLeft 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.comment-item:active {
  background: #F3F4F6;
  transform: scale(0.99);
}

.comment-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background: #E5E7EB;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.comment-item:active .comment-avatar {
  transform: scale(0.95);
}

.comment-main {
  flex: 1;
  min-width: 0;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.comment-nickname {
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-level {
  font-size: 22rpx;
  color: #FFFFFF;
  background: #3B82F6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-time {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-left: auto;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.comment-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 评论操作按钮 */
.comment-actions {
  display: flex;
  gap: 32rpx;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 0;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
}

.action-text {
  font-size: 24rpx;
  color: #6B7280;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: color 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn:active .action-text {
  color: #3B82F6;
}

/* 回复列表 */
.replies-list {
  margin-top: 16rpx;
  padding-left: 24rpx;
  border-left: 4rpx solid #E5E7EB;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.reply-item {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  font-size: 26rpx;
  line-height: 1.5;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.3s ease-out;
}

.reply-author {
  color: #3B82F6;
  font-weight: 600;
  flex-shrink: 0;
}

.reply-content {
  color: #374151;
  flex: 1;
  word-wrap: break-word;
}

.reply-actions {
  display: flex;
  align-items: center;
  margin-left: auto;
  flex-shrink: 0;
}

.reply-likes {
  font-size: 22rpx;
  color: #9CA3AF;
}

/* ===== 底部按钮 ===== */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
}

.btn-secondary {
  flex: 1;
  height: 96rpx;
  background: #FFFFFF;
  border: 2rpx solid #E5E7EB;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: #F9FAFB;
  transform: scale(0.97);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.btn-primary {
  flex: 1;
  height: 96rpx;
  background: #3B82F6;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  background: #2563EB;
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}
