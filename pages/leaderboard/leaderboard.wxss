/* pages/leaderboard/leaderboard.wxss */

.leaderboard-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 120rpx;
}

/* ===== 页面标题 ===== */
.page-header {
  background: #ffffff;
  padding: 90rpx 45rpx 45rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.header-title {
  margin-bottom: 15rpx;
}

.title-main {
  font-size: 48rpx;
  font-weight: 900;
  color: #111827;
  display: block;
}

.title-highlight {
  font-size: 48rpx;
  font-weight: 900;
  color: #10B981;
  display: block;
}

.header-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* ===== 表头 ===== */
.table-header {
  display: grid;
  grid-template-columns: 60rpx 1fr 200rpx;
  align-items: center;
  padding: 20rpx 45rpx;
  background: rgba(249, 250, 251, 0.5);
  border-bottom: 2rpx solid #e5e7eb;
}

.th-rank,
.th-detective,
.th-busted,
.th-strk {
  font-size: 20rpx;
  font-weight: bold;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.th-rank {
  text-align: center;
}

.th-detective {
  padding-left: 15rpx;
}

.th-stats {
  display: flex;
  justify-content: flex-end;
  gap: 80rpx;
}

.th-strk {
  width: 60rpx;
  text-align: center;
}

/* ===== 排行榜列表 ===== */
.leaderboard-list {
  height: calc(100vh - 350rpx);
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.user-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  margin-right: 0;
  display: grid;
  grid-template-columns: 60rpx 1fr 200rpx;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #f3f4f6;
  box-sizing: border-box;
}

/* ===== 排名图标 ===== */
.rank-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
}

.icon-trophy {
  font-size: 40rpx;
}

.icon-medal {
  font-size: 40rpx;
}

.rank-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #9ca3af;
}

/* ===== 用户信息 ===== */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 0;
  padding-left: 15rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e5e7eb;
  border: 2rpx solid #e5e7eb;
  flex-shrink: 0;
}

.user-details {
  flex: 1;
  min-width: 0;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #111827;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.level-badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 16rpx;
  font-weight: bold;
  border: 2rpx solid;
  flex-shrink: 0;
}

.badge-level-4 {
  background: #faf5ff;
  color: #9333ea;
  border-color: #e9d5ff;
}

.badge-level-3 {
  background: #fef2f2;
  color: #dc2626;
  border-color: #fecaca;
}

.badge-level-2 {
  background: #eff6ff;
  color: #2563eb;
  border-color: #dbeafe;
}

.badge-level-1 {
  background: #f0fdf4;
  color: #16a34a;
  border-color: #bbf7d0;
}

.badge-text {
  font-size: 16rpx;
}

.user-accuracy {
  display: flex;
  align-items: center;
  gap: 5rpx;
}

.accuracy-icon {
  font-size: 20rpx;
  color: #10B981;
}

.accuracy-text {
  font-size: 20rpx;
  color: #9ca3af;
}

/* ===== 统计数据 ===== */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 30rpx;
}

.stat-busted {
  font-size: 28rpx;
  font-weight: 900;
  color: #111827;
  width: 90rpx;
  text-align: right;
}

.stat-streak {
  width: 70rpx;
  background: #fff7ed;
  border: 2rpx solid #fed7aa;
  border-radius: 16rpx;
  padding: 12rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 5rpx;
  flex-shrink: 0;
}

.streak-icon {
  font-size: 20rpx;
  color: #f97316;
}

.streak-value {
  font-size: 20rpx;
  font-weight: bold;
  color: #ea580c;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
