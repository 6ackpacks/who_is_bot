/* pages/leaderboard/leaderboard.wxss - 赛博侦探榜单 */

.leaderboard-container {
  min-height: 100vh;
  background-color: #F8F9FA;
  background-image:
    linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
  background-size: 20px 20px;
  padding-bottom: 120rpx;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  padding: 200rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  padding: 200rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.retry-btn {
  padding: 20rpx 60rpx;
  background: #000000;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.retry-btn::after {
  border: none;
}

/* ===== 页面标题 ===== */
.page-header {
  background: #FFFFFF;
  padding: 80rpx 40rpx 50rpx;
  border-bottom: 3rpx solid #000000;
  position: relative;
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 0;
  right: 0;
  height: 3rpx;
  background: #EF4444;
}

.header-title {
  margin-bottom: 20rpx;
}

.title-main {
  font-size: 52rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  display: block;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1.2;
}

.title-highlight {
  font-size: 52rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  display: block;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1.2;
  text-decoration: underline;
  text-decoration-color: #EF4444;
  text-decoration-thickness: 4rpx;
  text-underline-offset: 6rpx;
}

.header-subtitle {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
  letter-spacing: 0.5rpx;
}

/* ===== 表头 ===== */
.table-header {
  display: grid;
  grid-template-columns: 80rpx 1fr 200rpx;
  align-items: center;
  padding: 25rpx 40rpx;
  background: #FFFFFF;
  border-bottom: 2rpx solid #E5E7EB;
  margin-bottom: 20rpx;
}

.th-rank,
.th-detective,
.th-busted,
.th-strk {
  font-size: 20rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.th-rank {
  text-align: center;
}

.th-detective {
  padding-left: 10rpx;
}

.th-stats {
  display: flex;
  justify-content: flex-end;
  gap: 70rpx;
  padding-right: 10rpx;
}

.th-strk {
  width: 60rpx;
  text-align: center;
}

/* ===== 排行榜列表 ===== */
.leaderboard-list {
  height: calc(100vh - 350rpx);
  padding: 0 30rpx;
  box-sizing: border-box;
}

.user-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 16rpx;
  display: grid;
  grid-template-columns: 80rpx 1fr 200rpx;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #E5E7EB;
  box-sizing: border-box;
  transition: all 0.2s;
  position: relative;
}

.user-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: transparent;
  transition: background 0.2s;
}

.user-item:nth-child(1)::before {
  background: linear-gradient(180deg, #FFD700 0%, #FFA500 100%);
}

.user-item:nth-child(2)::before {
  background: linear-gradient(180deg, #C0C0C0 0%, #A8A8A8 100%);
}

.user-item:nth-child(3)::before {
  background: linear-gradient(180deg, #CD7F32 0%, #B8860B 100%);
}

/* ===== 排名图标 ===== */
.rank-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
}

.icon-trophy {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 215, 0, 0.3));
}

.icon-medal {
  font-size: 48rpx;
}

.icon-medal.silver {
  filter: drop-shadow(0 2rpx 4rpx rgba(192, 192, 192, 0.3));
}

.icon-medal.bronze {
  filter: drop-shadow(0 2rpx 4rpx rgba(205, 127, 50, 0.3));
}

.rank-number {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 用户信息 ===== */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 0;
  padding-left: 10rpx;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #F3F4F6;
  border: 3rpx solid #000000;
  flex-shrink: 0;
}

.user-details {
  flex: 1;
  min-width: 0;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #000000;
  max-width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.level-badge {
  padding: 6rpx 14rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
  font-weight: 700;
  border: 2rpx solid #000000;
  background: #FFFFFF;
  color: #000000;
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.badge-level-4 {
  background: #000000;
  color: #FFFFFF;
  border-color: #000000;
}

.badge-level-3 {
  background: #EF4444;
  color: #FFFFFF;
  border-color: #EF4444;
}

.badge-level-2 {
  background: #3B82F6;
  color: #FFFFFF;
  border-color: #3B82F6;
}

.badge-level-1 {
  background: #FFFFFF;
  color: #000000;
  border-color: #000000;
}

.badge-text {
  font-size: 18rpx;
}

.user-accuracy {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.accuracy-icon {
  font-size: 22rpx;
  color: #000000;
  font-weight: 700;
}

.accuracy-text {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 统计数据 ===== */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 30rpx;
  padding-right: 10rpx;
}

.stat-busted {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  width: 90rpx;
  text-align: right;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.stat-streak {
  width: 70rpx;
  background: #000000;
  border-radius: 12rpx;
  padding: 14rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  flex-shrink: 0;
}

.streak-icon {
  font-size: 22rpx;
}

.streak-value {
  font-size: 22rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
