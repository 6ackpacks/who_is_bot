/* pages/leaderboard/leaderboard-enhanced.wxss - 增强版排行榜 */

/* ===== 容器 ===== */
.leaderboard-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0A0F1E 50%, #0F1419 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.leaderboard-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 30% 20%, rgba(0, 212, 255, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 70% 80%, rgba(0, 212, 255, 0.08) 0%, transparent 50%);
  pointer-events: none;
}

/* ===== 页面标题 ===== */
.page-header {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20rpx);
  padding: 80rpx 40rpx 50rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid rgba(0, 212, 255, 0.2);
  position: relative;
  animation: slideInDown 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.6), transparent);
}

.header-title {
  margin-bottom: 20rpx;
}

.title-main {
  font-size: 52rpx;
  font-weight: 900;
  color: #FFFFFF;
  font-style: italic;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-shadow: 0 0 30rpx rgba(0, 212, 255, 0.5);
}

.title-highlight {
  font-size: 52rpx;
  font-weight: 900;
  color: #00D4FF;
  font-style: italic;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-shadow: 0 0 30rpx rgba(0, 212, 255, 0.8);
  animation: neonGlow 2s ease-in-out infinite;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  border: 8rpx solid rgba(0, 212, 255, 0.2);
  border-top-color: #00D4FF;
  border-radius: 50%;
  animation: spin 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite;
  margin-bottom: 40rpx;
  box-shadow: 0 0 30rpx rgba(0, 212, 255, 0.4);
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 60vh;
  padding: 200rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.retry-btn {
  padding: 24rpx 60rpx;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 212, 255, 0.3);
}

/* ===== 表头 ===== */
.table-header {
  display: grid;
  grid-template-columns: 100rpx 1fr 220rpx;
  align-items: center;
  padding: 24rpx 40rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-bottom: 2rpx solid rgba(0, 212, 255, 0.2);
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.6s ease-out 0.2s backwards;
}

.th-rank {
  text-align: center;
}

.th-detective {
  padding-left: 10rpx;
}

.th-stats {
  display: flex;
  justify-content: flex-end;
  gap: 50rpx;
  padding-right: 10rpx;
}

.th-accuracy {
  width: 80rpx;
  text-align: right;
}

.th-total {
  width: 80rpx;
  text-align: right;
}

/* ===== 排行榜列表 ===== */
.leaderboard-list {
  height: calc(100vh - 380rpx);
  padding: 0 30rpx;
  box-sizing: border-box;
}

.user-item {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  padding: 28rpx 32rpx;
  display: grid;
  grid-template-columns: 100rpx 1fr 220rpx;
  align-items: center;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  border-bottom: 1rpx solid rgba(0, 212, 255, 0.1);
  animation: slideInLeft 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* 为每个项目添加延迟动画 */
.user-item:nth-child(1) { animation-delay: 0.1s; }
.user-item:nth-child(2) { animation-delay: 0.15s; }
.user-item:nth-child(3) { animation-delay: 0.2s; }
.user-item:nth-child(4) { animation-delay: 0.25s; }
.user-item:nth-child(5) { animation-delay: 0.3s; }
.user-item:nth-child(6) { animation-delay: 0.35s; }
.user-item:nth-child(7) { animation-delay: 0.4s; }
.user-item:nth-child(8) { animation-delay: 0.45s; }
.user-item:nth-child(9) { animation-delay: 0.5s; }
.user-item:nth-child(10) { animation-delay: 0.55s; }

.user-item:last-child {
  border-radius: 0 0 20rpx 20rpx;
  border-bottom: none;
  margin-bottom: 20rpx;
}

.user-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.08);
}

.user-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: transparent;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

/* 前三名特殊样式 */
.user-item:nth-child(1)::before {
  background: linear-gradient(180deg, #FFD700 0%, #FFA500 100%);
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.6);
}

.user-item:nth-child(2)::before {
  background: linear-gradient(180deg, #C0C0C0 0%, #A8A8A8 100%);
  box-shadow: 0 0 20rpx rgba(192, 192, 192, 0.6);
}

.user-item:nth-child(3)::before {
  background: linear-gradient(180deg, #CD7F32 0%, #B8860B 100%);
  box-shadow: 0 0 20rpx rgba(205, 127, 50, 0.6);
}

.user-item:nth-child(1),
.user-item:nth-child(2),
.user-item:nth-child(3) {
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.08) 0%, rgba(255, 255, 255, 0.05) 100%);
}

/* ===== 排名图标 ===== */
.rank-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
}

.rank-number {
  font-size: 36rpx;
  font-weight: 900;
  font-style: italic;
  color: rgba(255, 255, 255, 0.8);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 用户信息 ===== */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 0;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid rgba(0, 212, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.user-item:active .user-avatar {
  transform: scale(1.05);
  border-color: rgba(0, 212, 255, 0.6);
}

.user-details {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.level-badge {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 18rpx;
  font-weight: 700;
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.7);
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.badge-level-4 {
  background: linear-gradient(135deg, #000000 0%, #1F2937 100%);
  color: #FFFFFF;
  border-color: #00D4FF;
  box-shadow: 0 0 10rpx rgba(0, 212, 255, 0.5);
}

.badge-level-3 {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #FFFFFF;
  border-color: #EF4444;
}

.badge-level-2 {
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
  border-color: #00D4FF;
}

.badge-level-1 {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.7);
  border-color: rgba(255, 255, 255, 0.2);
}

.badge-text {
  font-size: 18rpx;
}

.accuracy-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 统计数据 ===== */
.user-stats {
  display: flex;
  justify-content: flex-end;
  gap: 50rpx;
  padding-right: 10rpx;
}

.stat-accuracy {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #00D4FF;
  width: 80rpx;
  text-align: right;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-shadow: 0 0 10rpx rgba(0, 212, 255, 0.5);
}

.stat-total {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: rgba(255, 255, 255, 0.9);
  width: 80rpx;
  text-align: right;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
