/* pages/leaderboard/leaderboard.wxss */
.leaderboard-container {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding-top: 16rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  padding: 0 32rpx;
  gap: 24rpx;
  margin-bottom: 32rpx;
  overflow-x: auto;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.category-tabs::-webkit-scrollbar {
  display: none;
}

.tab-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  border: 2rpx solid #e5e5e5;
  background-color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  white-space: nowrap;
  transition: all 0.3s;
}

.tab-active {
  background-color: #000;
  color: #fff;
  border-color: #000;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.tab-icon {
  font-size: 28rpx;
}

.tab-label {
  font-size: 28rpx;
}

/* 列表标题 */
.list-header {
  display: flex;
  justify-content: space-between;
  padding: 0 48rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #999;
}

/* 排行榜列表 */
.leaderboard-list {
  flex: 1;
  padding: 0 32rpx;
  padding-bottom: 160rpx;
}

.leaderboard-item {
  position: relative;
  background-color: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 排名徽章 */
.rank-badge {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 28rpx;
  font-style: italic;
  border-radius: 50%;
  flex-shrink: 0;
}

.rank-0 {
  background-color: #fef3c7;
  color: #d97706;
}

.rank-1 {
  background-color: #e5e5e5;
  color: #666;
}

.rank-2 {
  background-color: #fed7aa;
  color: #ea580c;
}

.rank-other {
  background-color: transparent;
  color: #999;
}

.rank-number {
  font-size: 28rpx;
}

/* 模型信息 */
.model-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.model-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 0;
  flex-wrap: wrap;
}

.model-name {
  font-weight: bold;
  color: #333;
  font-size: 30rpx;
  flex-shrink: 0;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.model-company {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  color: #666;
  flex-shrink: 0;
  white-space: nowrap;
}

.model-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #999;
  flex-wrap: wrap;
}

.model-type {
  text-transform: capitalize;
  white-space: nowrap;
}

.meta-dot {
  font-size: 20rpx;
}

.model-tests {
  font-size: 24rpx;
  white-space: nowrap;
}

/* 欺骗率 */
.deception-rate {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
}

.rate-value {
  font-size: 40rpx;
  font-weight: 900;
  color: #3b82f6;
}

/* 底部占位 */
.bottom-spacer {
  height: 80rpx;
}
