/* pages/leaderboard/leaderboard.wxss - 增强版赛博侦探榜单 */

.leaderboard-container {
  min-height: 100vh;
  background-color: #F8F9FA;
  background-image:
    linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
  background-size: 20px 20px;
  padding-bottom: 120rpx;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  padding: 200rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(59, 130, 246, 0.2);
  border-top-color: #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
  box-shadow: 0 0 20rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-family: "PingFang SC", -apple-system, sans-serif;
  font-weight: 600;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  padding: 200rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

.error-text {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn {
  padding: 20rpx 60rpx;
  background: #3B82F6;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  background: #2563EB;
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* ===== 页面标题 ===== */
.page-header {
  background: #FFFFFF;
  padding: 80rpx 40rpx 50rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.header-title {
  margin-bottom: 20rpx;
}

.title-main {
  font-size: 52rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  display: block;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1.2;
  animation: slideInLeft 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.title-highlight {
  font-size: 52rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  display: block;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1.2;
  text-decoration: underline;
  text-decoration-color: #3B82F6;
  text-decoration-thickness: 4rpx;
  text-underline-offset: 6rpx;
  animation: slideInLeft 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.header-subtitle {
  font-size: 22rpx;
  color: #9CA3AF;
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
  letter-spacing: 0.5rpx;
  animation: fadeIn 0.5s ease-out 0.2s backwards;
}

/* ===== 表头 ===== */
.table-header {
  display: grid;
  grid-template-columns: 100rpx 1fr 220rpx;
  align-items: center;
  padding: 25rpx 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 0 0;
  margin: 0 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.th-rank,
.th-detective,
.th-accuracy,
.th-total {
  font-size: 20rpx;
  font-weight: 700;
  color: #6B7280;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.th-rank {
  text-align: center;
}

.th-detective {
  padding-left: 10rpx;
}

.th-stats {
  display: flex;
  justify-content: flex-end;
  gap: 50rpx;
  padding-right: 10rpx;
}

.th-accuracy {
  width: 80rpx;
  text-align: right;
}

.th-total {
  width: 80rpx;
  text-align: right;
}

/* ===== 排行榜列表 ===== */
.leaderboard-list {
  height: calc(100vh - 380rpx);
  padding: 0 30rpx;
  box-sizing: border-box;
}

.user-item {
  background: #FFFFFF;
  padding: 28rpx 32rpx;
  display: grid;
  grid-template-columns: 100rpx 1fr 220rpx;
  align-items: center;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  border-bottom: 1rpx solid #F3F4F6;
  animation: slideInLeft 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.user-item:nth-child(1) {
  animation-delay: 0.15s;
}

.user-item:nth-child(2) {
  animation-delay: 0.2s;
}

.user-item:nth-child(3) {
  animation-delay: 0.25s;
}

.user-item:nth-child(4) {
  animation-delay: 0.3s;
}

.user-item:nth-child(5) {
  animation-delay: 0.35s;
}

.user-item:active {
  transform: scale(0.99);
  background: #F9FAFB;
}

.user-item:last-child {
  border-radius: 0 0 20rpx 20rpx;
  border-bottom: none;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.user-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: transparent;
  transition: background 0.2s;
}

.user-item:nth-child(1)::before {
  background: linear-gradient(180deg, #FFD700 0%, #FFA500 100%);
}

.user-item:nth-child(2)::before {
  background: linear-gradient(180deg, #C0C0C0 0%, #A8A8A8 100%);
}

.user-item:nth-child(3)::before {
  background: linear-gradient(180deg, #CD7F32 0%, #B8860B 100%);
}

.user-item:nth-child(1),
.user-item:nth-child(2),
.user-item:nth-child(3) {
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.02) 0%, #FFFFFF 100%);
}

/* ===== 排名图标 ===== */
.rank-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.rank-number {
  font-size: 36rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 用户信息 ===== */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 0;
  padding-left: 10rpx;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #F3F4F6;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.user-item:active .user-avatar {
  transform: scale(0.95);
}

.user-details {
  flex: 1;
  min-width: 0;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.level-badge {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 18rpx;
  font-weight: 700;
  background: #F3F4F6;
  color: #6B7280;
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.badge-level-4 {
  background: #000000;
  color: #FFFFFF;
}

.badge-level-3 {
  background: #EF4444;
  color: #FFFFFF;
}

.badge-level-2 {
  background: #3B82F6;
  color: #FFFFFF;
}

.badge-level-1 {
  background: #F3F4F6;
  color: #6B7280;
}

.badge-text {
  font-size: 18rpx;
}

.accuracy-text {
  font-size: 22rpx;
  color: #9CA3AF;
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 统计数据 ===== */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 50rpx;
  padding-right: 10rpx;
}

.stat-accuracy {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #3B82F6;
  width: 80rpx;
  text-align: right;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.user-item:active .stat-accuracy {
  transform: scale(1.05);
}

.stat-total {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  width: 80rpx;
  text-align: right;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
