/* pages/leaderboard/leaderboard.wxss - Podium Redesign */

/* ===== 容器 ===== */
.leaderboard-container {
  width: 100%;
  min-height: 100vh;
  background: #F9F6F0;
  position: relative;
  overflow: hidden;
  padding-bottom: 120rpx;
}

/* ===== 页面标题 ===== */
.page-header {
  padding: 48rpx 48rpx 64rpx;
  text-align: left;
}

.page-title {
  font-family: 'Playfair Display', 'Noto Serif SC', serif;
  font-size: 72rpx;
  font-weight: 600;
  color: #591C2E;
  line-height: 1.2;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  position: relative;
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  border: 8rpx solid #E5E0D8;
  border-top-color: #591C2E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #2A2222;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 60vh;
  padding: 80rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  position: relative;
}

.error-text {
  font-size: 28rpx;
  color: #2A2222;
  text-align: center;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 24rpx 60rpx;
  background: #591C2E;
  color: #F9F6F0;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* ===== 排行榜内容 ===== */
.leaderboard-content {
  height: calc(100vh - 240rpx);
  padding: 0 48rpx;
  box-sizing: border-box;
}

/* ===== 领奖台容器 ===== */
.podium-container {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 32rpx;
  height: 520rpx;
  margin-bottom: 48rpx;
}

/* ===== 领奖台项目 ===== */
.podium-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* 第一名 */
.podium-first {
  z-index: 3;
}

/* 第二名 */
.podium-second {
  z-index: 2;
}

/* 第三名 */
.podium-third {
  z-index: 1;
}

/* ===== 皇冠图标 ===== */
.crown-icon {
  position: absolute;
  top: -64rpx;
  font-size: 48rpx;
  z-index: 10;
  animation: float 3s ease-in-out infinite;
}

/* ===== 头像容器 ===== */
.podium-avatar-wrapper {
  margin-bottom: 16rpx;
}

/* 头像样式 */
.podium-avatar {
  border-radius: 50%;
  object-fit: cover;
}

/* 第一名头像 */
.avatar-first {
  width: 160rpx;
  height: 160rpx;
  border: 6rpx solid #D4AF37;
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.4);
}

/* 第二名头像 */
.avatar-second {
  width: 128rpx;
  height: 128rpx;
  border: 4rpx solid #E5E0D8;
  box-shadow: 0 4rpx 16rpx rgba(229, 224, 216, 0.4);
}

/* 第三名头像 */
.avatar-third {
  width: 128rpx;
  height: 128rpx;
  border: 4rpx solid #C88A66;
  box-shadow: 0 4rpx 16rpx rgba(200, 138, 102, 0.4);
}

/* ===== 领奖台底座 ===== */
.podium-base {
  width: 100%;
  border-radius: 16rpx 16rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 第一名底座 */
.base-first {
  height: 256rpx;
  background: linear-gradient(180deg, #D4AF37 0%, #B59223 100%);
  box-shadow: 0 16rpx 48rpx rgba(212, 175, 55, 0.3);
}

/* 第二名底座 */
.base-second {
  height: 192rpx;
  background: #E5E0D8;
  box-shadow: 0 8rpx 24rpx rgba(229, 224, 216, 0.3);
}

/* 第三名底座 */
.base-third {
  height: 160rpx;
  background: #C88A66;
  box-shadow: 0 8rpx 24rpx rgba(200, 138, 102, 0.3);
}

/* ===== 排名数字 ===== */
.podium-rank {
  font-family: 'Playfair Display', 'Noto Serif SC', serif;
  font-weight: 700;
  text-align: center;
}

/* 第一名排名 */
.rank-first {
  font-size: 144rpx;
  color: #FFFFFF;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

/* 第二名排名 */
.rank-second {
  font-size: 72rpx;
  color: #999999;
  position: absolute;
  top: -24rpx;
}

/* 第三名排名 */
.rank-third {
  font-size: 72rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ===== 排名卡片容器 ===== */
.ranking-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ===== 排名卡片 ===== */
.ranking-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: #FFFFFF;
  border: 2rpx solid #F0F0F0;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(89, 28, 46, 0.06);
  transition: all 0.3s ease;
}

.ranking-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(89, 28, 46, 0.08);
}

/* ===== 卡片排名数字 ===== */
.card-rank {
  font-family: 'Playfair Display', 'Noto Serif SC', serif;
  font-size: 56rpx;
  font-weight: 600;
  color: #CCCCCC;
  width: 80rpx;
  text-align: center;
  flex-shrink: 0;
}

/* ===== 卡片头像 ===== */
.card-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
  flex-shrink: 0;
}

/* ===== 卡片信息 ===== */
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.card-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2222;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-accuracy {
  font-size: 24rpx;
  color: #999999;
}

/* ===== 卡片统计 ===== */
.card-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
  flex-shrink: 0;
}

.card-score {
  font-size: 24rpx;
  font-weight: 700;
  color: #591C2E;
}

.card-label {
  font-size: 20rpx;
  color: #999999;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}

/* ===== 动画 ===== */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}
