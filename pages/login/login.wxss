/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 120rpx 60rpx 80rpx;
}

/* ===== Logo 区域 ===== */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  font-size: 160rpx;
  margin-bottom: 30rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.app-name {
  font-size: 56rpx;
  font-weight: 900;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* ===== 功能介绍 ===== */
.features-section {
  width: 100%;
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.feature-text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 600;
}

/* ===== 登录区域 ===== */
.login-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: none;
  margin-bottom: 30rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.login-icon {
  font-size: 40rpx;
  color: #10B981;
  font-weight: bold;
}

.login-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.privacy-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.tips-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tips-link {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: bold;
  text-decoration: underline;
  margin: 0 5rpx;
}

/* ===== 跳过登录 ===== */
.skip-section {
  width: 100%;
  display: flex;
  justify-content: center;
}

.skip-btn {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  padding: 20rpx 40rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.skip-btn:active {
  background: rgba(255, 255, 255, 0.2);
}
