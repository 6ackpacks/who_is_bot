<!--pages/login/login.wxml-->
<view class="login-container">

  <!-- Logo 区域 -->
  <view class="logo-section">
    <view class="logo-icon">🤖</view>
    <text class="app-name">谁是人机?</text>
    <text class="app-slogan">挑战你的AI识别能力</text>
  </view>

  <!-- 功能介绍 -->
  <view class="features-section">
    <view class="feature-item">
      <text class="feature-icon">🎯</text>
      <text class="feature-text">判定AI生成内容</text>
    </view>
    <view class="feature-item">
      <text class="feature-icon">🏆</text>
      <text class="feature-text">挑战全网排行榜</text>
    </view>
    <view class="feature-item">
      <text class="feature-icon">📊</text>
      <text class="feature-text">追踪个人成长</text>
    </view>
  </view>

  <!-- 登录按钮 -->
  <view class="login-section">
    <button
      class="login-btn"
      bindtap="handleWxLogin"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      <text class="login-icon">✓</text>
      <text class="login-text">{{loading ? '登录中...' : '微信一键登录'}}</text>
    </button>

    <view class="privacy-tips">
      <text class="tips-text">登录即表示同意</text>
      <text class="tips-link" bindtap="showPrivacy">《用户协议》</text>
      <text class="tips-text">和</text>
      <text class="tips-link" bindtap="showPrivacy">《隐私政策》</text>
    </view>
  </view>

  <!-- 跳过登录 -->
  <view class="skip-section">
    <text class="skip-btn" bindtap="handleSkip">暂不登录，先看看</text>
  </view>

</view>
