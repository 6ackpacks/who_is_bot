/* pages/profile/profile.wxss - 增强版赛博侦探档案 */

.profile-container {
  width: 100%;
  min-height: 100vh;
  background-color: #F8F9FA;
  background-image:
    linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
  background-size: 20px 20px;
}

.profile-scroll {
  width: 100%;
  height: 100vh;
  padding-bottom: 160rpx;
}

/* ===== 个人信息头部 ===== */
.profile-header {
  background: #FFFFFF;
  padding: 80rpx 40rpx 50rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* 头像 */
.avatar-wrapper {
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.avatar-gradient {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #FFFFFF;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.avatar-gradient:active {
  transform: scale(0.95);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 用户名 */
.username {
  font-size: 48rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 20rpx;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.5s ease-out 0.2s backwards;
}

/* 等级徽章 */
.level-badge-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 28rpx;
  background: #000000;
  border-radius: 50rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.level-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #3B82F6;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
}

.level-text {
  font-size: 26rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 进度条 */
.progress-section {
  width: 100%;
  margin-bottom: 40rpx;
  animation: fadeIn 0.5s ease-out 0.4s backwards;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label-left,
.progress-label-right {
  font-size: 22rpx;
  font-weight: 600;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #E5E7EB;
  border-radius: 50rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6 0%, #60A5FA 100%);
  border-radius: 50rpx;
  transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.progress-hint {
  font-size: 20rpx;
  color: #9CA3AF;
  text-align: center;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 统计数据 */
.stats-row {
  display: flex;
  gap: 20rpx;
  width: 100%;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
}

.stat-item {
  flex: 1;
  background: #FFFFFF;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.stat-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-divider {
  /* No border needed with gap */
}

.stat-value {
  font-size: 44rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  line-height: 1;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.stat-highlight {
  color: #3B82F6;
}

.stat-streak {
  color: #EF4444;
}

.stat-label {
  font-size: 18rpx;
  font-weight: 700;
  color: #9CA3AF;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 创作者中心 ===== */
.creator-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  letter-spacing: -0.5rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.beta-badge {
  padding: 6rpx 16rpx;
  background: #3B82F6;
  color: #FFFFFF;
  font-size: 18rpx;
  font-weight: 700;
  border-radius: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

.creator-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.creator-card:active {
  transform: scale(0.99);
}

.creator-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.lock-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #F3F4F6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  animation: pulse 2s ease-in-out infinite;
}

.creator-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-desc {
  font-size: 24rpx;
  color: #9CA3AF;
  line-height: 1.6;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.highlight-text {
  color: #3B82F6;
  font-weight: 700;
}

.creator-btn {
  margin-top: 30rpx;
  padding: 20rpx 50rpx;
  background: #E5E7EB;
  color: #9CA3AF;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 700;
  font-family: "PingFang SC", -apple-system, sans-serif;
  border: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.creator-btn::after {
  border: none;
}

.creator-bg-circle {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: #F8F9FA;
  border-radius: 50%;
  z-index: 0;
}

/* ===== 判定历史入口 ===== */
.history-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.history-entry-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-entry-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-entry-card:active .entry-icon {
  transform: scale(0.9);
}

.entry-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.entry-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #000000;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.entry-desc {
  font-size: 24rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.entry-arrow {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-entry-card:active .entry-arrow {
  transform: translateX(4rpx);
}

/* ===== 我的成就 ===== */
.achievements-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.achievement-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: slideInLeft 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.achievement-item:nth-child(1) {
  animation-delay: 0.45s;
}

.achievement-item:nth-child(2) {
  animation-delay: 0.5s;
}

.achievement-item:active {
  transform: scale(0.98);
}

.achievement-unlocked {
  /* No special styling needed */
}

.achievement-locked {
  opacity: 0.6;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.achievement-item:active .achievement-icon {
  transform: scale(0.9);
}

.icon-unlocked {
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
}

.icon-locked {
  background: #E5E7EB;
}

.achievement-info {
  flex: 1;
  min-width: 0;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.achievement-desc {
  font-size: 22rpx;
  color: #9CA3AF;
  line-height: 1.4;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.achievement-status {
  font-size: 22rpx;
  font-weight: 700;
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.status-unlocked {
  color: #3B82F6;
}

.status-locked {
  color: #9CA3AF;
}

/* 分享按钮 */
.share-btn {
  width: 100%;
  padding: 28rpx;
  background: #3B82F6;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  border: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  background: #2563EB;
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.share-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.logout-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #EF4444;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
