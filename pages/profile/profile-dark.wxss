/* pages/profile/profile-enhanced.wxss - 增强版个人页面 */

/* ===== 容器 ===== */
.profile-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #0A0E27 0%, #1A1F3A 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.profile-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 50% 10%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.profile-scroll {
  width: 100%;
  height: 100vh;
  padding-bottom: 160rpx;
}

/* ===== 个人信息头部 ===== */
.profile-header {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20rpx);
  padding: 80rpx 40rpx 50rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 2rpx solid rgba(59, 130, 246, 0.2);
  position: relative;
  animation: slideInDown 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.profile-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.6), transparent);
}

/* 头像 */
.avatar-wrapper {
  margin-bottom: 30rpx;
  animation: scaleInBounce 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.avatar-gradient {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%);
  padding: 6rpx;
  box-shadow:
    0 8rpx 32rpx rgba(59, 130, 246, 0.4),
    0 0 60rpx rgba(59, 130, 246, 0.3);
  position: relative;
  animation: pulseGlow 3s ease-in-out infinite;
}

.avatar-gradient::before {
  content: '';
  position: absolute;
  inset: -6rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3B82F6, #8B5CF6);
  opacity: 0.5;
  filter: blur(20rpx);
  z-index: -1;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(10, 14, 39, 0.8);
}

/* 用户名 */
.username {
  font-size: 48rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  letter-spacing: -1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-shadow: 0 0 30rpx rgba(59, 130, 246, 0.6);
  animation: fadeIn 0.6s ease-out 0.4s backwards;
}

/* 等级徽章 */
.level-badge-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 28rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  border-radius: 50rpx;
  margin-bottom: 40rpx;
  box-shadow:
    0 4rpx 16rpx rgba(59, 130, 246, 0.4),
    0 0 40rpx rgba(59, 130, 246, 0.3);
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
}

.level-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #FFFFFF;
  animation: pulse 2s ease-in-out infinite;
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.8);
}

.level-text {
  font-size: 26rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 进度条 */
.progress-section {
  width: 100%;
  margin-bottom: 40rpx;
  animation: fadeIn 0.8s ease-out 0.6s backwards;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label-left,
.progress-label-right {
  font-size: 22rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 16rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6 0%, #8B5CF6 100%);
  border-radius: 50rpx;
  transition: width 1s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  box-shadow: 0 0 20rpx rgba(59, 130, 246, 0.6);
  animation: progressBar 1s cubic-bezier(0.16, 1, 0.3, 1);
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.4) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

.progress-hint {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 统计数据 */
.stats-row {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.stat-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.stat-item:nth-child(1) { animation-delay: 0.7s; }
.stat-item:nth-child(2) { animation-delay: 0.8s; }
.stat-item:nth-child(3) { animation-delay: 0.9s; }

.stat-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.stat-value {
  font-size: 44rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFFFFF;
  line-height: 1;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: countUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

.stat-highlight {
  color: #3B82F6;
  text-shadow: 0 0 20rpx rgba(59, 130, 246, 0.6);
}

.stat-streak {
  color: #EF4444;
  text-shadow: 0 0 20rpx rgba(239, 68, 68, 0.6);
}

.stat-label {
  font-size: 18rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 创作者中心 ===== */
.creator-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 1s backwards;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFFFFF;
  letter-spacing: -0.5rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.beta-badge {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #FFFFFF;
  font-size: 18rpx;
  font-weight: 700;
  border-radius: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
}

.creator-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.creator-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.6), transparent);
}

.creator-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.lock-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  animation: pulse 2s ease-in-out infinite;
}

.creator-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.highlight-text {
  color: #3B82F6;
  font-weight: 700;
  text-shadow: 0 0 10rpx rgba(59, 130, 246, 0.5);
}

.creator-btn {
  margin-top: 30rpx;
  padding: 20rpx 50rpx;
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 700;
  font-family: "PingFang SC", -apple-system, sans-serif;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.creator-btn::after {
  border: none;
}

.creator-bg-circle {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

/* ===== 判定历史入口 ===== */
.history-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 1.1s backwards;
}

.history-entry-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.history-entry-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
}

.entry-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.entry-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.entry-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.entry-arrow {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.4);
}

/* ===== 我的成就 ===== */
.achievements-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 1.2s backwards;
}

.achievement-item {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.achievement-item:active {
  transform: scale(0.98);
}

.achievement-locked {
  opacity: 0.5;
  border-color: rgba(255, 255, 255, 0.1);
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon-unlocked {
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
}

.icon-locked {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.achievement-info {
  flex: 1;
  min-width: 0;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.achievement-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.4;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.achievement-status {
  font-size: 22rpx;
  font-weight: 700;
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.status-unlocked {
  color: #3B82F6;
}

.status-locked {
  color: rgba(255, 255, 255, 0.3);
}

/* 分享按钮 */
.share-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
  border: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.share-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 20rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  transform: scale(0.98);
  background: rgba(239, 68, 68, 0.15);
}

.logout-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #EF4444;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
