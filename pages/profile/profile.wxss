/* pages/profile/profile.wxss - 赛博侦探档案 */

.profile-container {
  width: 100%;
  min-height: 100vh;
  background-color: #F8F9FA;
  background-image:
    linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
  background-size: 20px 20px;
}

.profile-scroll {
  width: 100%;
  height: 100vh;
  padding-bottom: 160rpx;
}

/* ===== 个人信息头部 ===== */
.profile-header {
  background: #FFFFFF;
  padding: 80rpx 40rpx 50rpx;
  border-bottom: 3rpx solid #000000;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.profile-header::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 0;
  right: 0;
  height: 3rpx;
  background: #3B82F6;
}

/* 头像 */
.avatar-wrapper {
  margin-bottom: 30rpx;
}

.avatar-gradient {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #F3F4F6;
}

/* 用户名 */
.username {
  font-size: 44rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 15rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  letter-spacing: -0.5rpx;
}

/* 等级徽章 */
.level-badge-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #000000;
  padding: 12rpx 28rpx;
  border-radius: 8rpx;
  margin-bottom: 50rpx;
}

.level-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #EF4444;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(0.9);
  }
}

.level-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 进度条 */
.progress-section {
  width: 100%;
  max-width: 450rpx;
  margin-bottom: 50rpx;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.progress-label-left,
.progress-label-right {
  font-size: 22rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E7EB;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 18rpx;
  border: 2rpx solid #000000;
}

.progress-fill {
  height: 100%;
  background: #000000;
  border-radius: 8rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 30%;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 100%);
}

.progress-hint {
  font-size: 22rpx;
  color: #666666;
  text-align: center;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* 统计数据 */
.stats-row {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 0;
  width: 100%;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.stat-divider {
  border-left: 2rpx solid #E5E7EB;
  border-right: 2rpx solid #E5E7EB;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 10rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  letter-spacing: -1rpx;
}

.stat-highlight {
  color: #3B82F6;
}

.stat-streak {
  color: #EF4444;
}

.stat-label {
  font-size: 20rpx;
  font-weight: 700;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 区块标题 ===== */
.section-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 20rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  letter-spacing: -0.5rpx;
}

/* ===== 创作者中心 ===== */
.creator-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.beta-badge {
  font-size: 20rpx;
  background: #000000;
  color: #FFFFFF;
  padding: 8rpx 18rpx;
  border-radius: 6rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  border: 3rpx solid #000000;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.creator-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  z-index: 10;
}

.lock-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #F3F4F6;
  border-radius: 50%;
  border: 3rpx solid #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 25rpx;
}

.lock-icon {
  font-size: 48rpx;
}

.creator-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 15rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.highlight-text {
  color: #000000;
  font-weight: 700;
  text-decoration: underline;
  text-decoration-color: #EF4444;
  text-decoration-thickness: 2rpx;
  text-underline-offset: 3rpx;
}

.creator-btn {
  margin-top: 30rpx;
  padding: 22rpx 50rpx;
  background: #E5E7EB;
  color: #9CA3AF;
  font-size: 26rpx;
  font-weight: 700;
  border-radius: 12rpx;
  border: 2rpx solid #D1D5DB;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-bg-circle {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: #F8F9FA;
  border-radius: 50%;
  z-index: 0;
}

/* ===== 我的成就 ===== */
.achievements-section {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}

.achievement-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  border: 3rpx solid #000000;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
}

.achievement-unlocked {
  border-color: #000000;
}

.achievement-locked {
  opacity: 0.5;
  border-color: #E5E7EB;
}

.achievement-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
  border: 3rpx solid #000000;
}

.icon-unlocked {
  background: #000000;
}

.icon-locked {
  background: #F3F4F6;
  border-color: #E5E7EB;
}

.icon-text {
  font-size: 44rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 30rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-bottom: 8rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.achievement-desc {
  font-size: 22rpx;
  color: #666666;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.achievement-status {
  font-size: 24rpx;
  font-weight: 700;
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.status-unlocked {
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.status-locked {
  font-size: 32rpx;
}

/* 分享按钮 */
.share-btn {
  width: 100%;
  height: 96rpx;
  border: 3rpx solid #000000;
  border-radius: 16rpx;
  background: #FFFFFF;
  color: #000000;
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  margin-top: 30rpx;
  transition: all 0.2s;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  background: #000000;
  color: #FFFFFF;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.share-icon {
  font-size: 36rpx;
}

.share-text {
  font-size: 30rpx;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 96rpx;
  border: 3rpx solid #EF4444;
  border-radius: 16rpx;
  background: #FFFFFF;
  color: #EF4444;
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  transition: all 0.2s;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.12);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #EF4444;
  color: #FFFFFF;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.2);
}

.logout-text {
  font-size: 30rpx;
}

/* 底部占位 */
.bottom-spacer {
  height: 100rpx;
}
