/* pages/profile/profile.wxss - Redesigned Profile Page */

/* ===== Color Variables ===== */
page {
  --bg-cream: #F9F6F0;
  --primary-burgundy: #591C2E;
  --accent-rose: #E68D9F;
  --accent-rose-light: #FCEEF1;
  --accent-gold: #D4AF37;
  --ui-gray: #E5E0D8;
  --surface-white: #FFFFFF;
  --text-dark: #2A2222;
  --gray-50: #F9FAFB;
  --gray-100: #F3F4F6;
  --gray-400: #9CA3AF;
  --gray-500: #6B7280;
  --gray-800: #1F2937;
  --font-display: 'Playfair Display', 'Noto Serif SC', serif;
  --font-body: 'DM Sans', system-ui, -apple-system, sans-serif;
}

/* ===== Icon Colors ===== */
.icon-burgundy {
  color: var(--primary-burgundy);
}

.icon-rose {
  color: var(--accent-rose);
}

.icon-gold {
  color: var(--accent-gold);
}

.icon-white {
  color: var(--surface-white);
}

.icon-success {
  color: #10B981;
}

.icon-error {
  color: #EF4444;
}

/* ===== Container ===== */
.profile-container {
  width: 100%;
  min-height: 100vh;
  background: var(--bg-cream);
  position: relative;
  padding-bottom: 120rpx;
}

.profile-scroll {
  width: 100%;
  height: 100vh;
}

/* ===== Top Bar ===== */
.top-bar {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 100;
  padding: 40rpx;
}

.more-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--ui-gray);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(89, 28, 46, 0.1);
}

.more-btn:active {
  background: var(--accent-rose-light);
  transform: scale(0.95);
}

/* ===== Avatar Section ===== */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx 40rpx;
  animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar-ring {
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
  border: 8rpx solid var(--surface-white);
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(89, 28, 46, 0.25);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

/* Level Badge Overlay */
.level-badge {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background: var(--primary-burgundy);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(89, 28, 46, 0.3);
}

.level-text {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--accent-gold);
  font-family: var(--font-body);
}

/* Username */
.username {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-burgundy);
  font-family: var(--font-display);
  margin-bottom: 24rpx;
  text-align: center;
}

/* Progress Bar */
.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 100%;
  max-width: 384rpx;
}

.progress-bar {
  width: 384rpx;
  height: 16rpx;
  background: var(--ui-gray);
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--accent-gold);
  border-radius: 8rpx;
  transition: width 0.6s ease;
}

.exp-text {
  font-size: 24rpx;
  color: var(--gray-400);
  font-family: var(--font-body);
}

/* ===== Stats Grid ===== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 0 40rpx 40rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.stat-card {
  background: var(--surface-white);
  padding: 32rpx;
  border-radius: 32rpx;
  border: 2rpx solid var(--gray-50);
  box-shadow: 0 2rpx 8rpx rgba(89, 28, 46, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  font-family: var(--font-display);
  line-height: 1;
}

.stat-total {
  color: var(--primary-burgundy);
}

.stat-accuracy {
  color: var(--accent-gold);
}

.stat-streak {
  color: var(--accent-rose);
}

.stat-label {
  font-size: 20rpx;
  text-transform: uppercase;
  color: var(--gray-400);
  letter-spacing: 0.1em;
  font-weight: 600;
  font-family: var(--font-body);
}

/* ===== Action Buttons Grid ===== */
.action-buttons-container {
  padding: 0 40rpx 40rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.action-buttons-grid {
  background: var(--surface-white);
  border-radius: 48rpx;
  padding: 16rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: var(--gray-50);
}

.action-icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--bg-cream);
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-label {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--gray-500);
  font-family: var(--font-body);
}

/* ===== Recent Activity Section ===== */
.recent-activity-section {
  padding: 0 40rpx 40rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.section-header {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-dark);
  font-family: var(--font-display);
  margin-bottom: 24rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: var(--surface-white);
  border: 2rpx solid var(--gray-100);
  border-radius: 24rpx;
  transition: all 0.2s ease;
}

.activity-card:active {
  transform: scale(0.99);
}

.activity-failed {
  opacity: 0.7;
}

.activity-thumbnail {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.activity-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--gray-800);
  font-family: var(--font-body);
}

.activity-timestamp {
  font-size: 20rpx;
  color: var(--gray-400);
  font-family: var(--font-body);
}

.activity-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 20rpx;
  color: var(--gray-400);
  font-family: var(--font-body);
}

/* ===== Logout Section ===== */
.logout-section {
  padding: 40rpx;
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  border: 2rpx solid var(--accent-rose);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: var(--accent-rose-light);
}

.logout-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--accent-rose);
  font-family: var(--font-body);
}

/* ===== Bottom Spacer ===== */
.bottom-spacer {
  height: 100rpx;
}

/* ===== More Menu Overlay ===== */
.more-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

.more-menu {
  width: 100%;
  background: var(--surface-white);
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  animation: slideInUp 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.more-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.more-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-dark);
  font-family: var(--font-display);
}

.more-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--ui-gray);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.more-close:active {
  background: var(--accent-rose-light);
  transform: scale(0.95);
}

.more-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.more-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: var(--bg-cream);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.more-item:active {
  background: var(--accent-rose-light);
  transform: scale(0.99);
}

.more-item-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: var(--surface-white);
  border: 2rpx solid var(--ui-gray);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.more-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.more-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-dark);
  font-family: var(--font-body);
}

.more-item-desc {
  font-size: 24rpx;
  color: #999;
  font-family: var(--font-body);
}

/* ===== Animations ===== */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInScale {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

@keyframes slideInUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}
