  margin-bottom: 32rpx;
}

.more-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.more-close {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.more-close .icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.more-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.more-item {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.more-item:active {
  background: rgba(255, 255, 255, 0.08);
  transform: scale(0.98);
}

.more-item-icon {
  width: 72rpx;
  height: 72rpx;
  background: rgba(0, 242, 255, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.more-item-icon .icon {
  font-size: 32rpx;
  color: #00F2FF;
}

.more-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.more-item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.more-item-desc {
