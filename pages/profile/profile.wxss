/* pages/profile/profile.wxss - NetEase Cloud Music Inspired with Deep Midnight Theme */

/* ===== 容器 ===== */
.profile-container {
  width: 100%;
  min-height: 100vh;
  background: #0F111A;
  position: relative;
}

.profile-scroll {
  width: 100%;
  height: 100vh;
}

/* ===== 顶部更多按钮 ===== */
.top-bar {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 100;
  padding: 40rpx;
}

.more-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.more-btn:active {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(0.95);
}

.more-btn .icon {
  font-size: 32rpx;
  color: #00F2FF;
}

/* ===== 沉浸式头部 ===== */
.immersive-header {
  padding: 100rpx 40rpx 60rpx;
  position: relative;
  background: linear-gradient(180deg, rgba(0, 242, 255, 0.08) 0%, transparent 100%);
}

.header-bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: radial-gradient(circle at 50% 0%, rgba(0, 242, 255, 0.15) 0%, transparent 70%);
  pointer-events: none;
}

/* 头像 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
  animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.avatar-ring {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  padding: 6rpx;
  background: linear-gradient(135deg, #00F2FF 0%, #00A8CC 100%);
  box-shadow: 0 8rpx 32rpx rgba(0, 242, 255, 0.4);
  position: relative;
}

.avatar-ring::before {
  content: '';
  position: absolute;
  inset: -8rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #00F2FF, #00A8CC);
  opacity: 0.3;
  filter: blur(16rpx);
  z-index: -1;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #0F111A;
}

/* 昵称 */
.nickname {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-align: center;
  margin-bottom: 20rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: fadeIn 0.6s ease 0.2s backwards;
}

/* 徽章行 */
.badges-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 48rpx;
  animation: fadeIn 0.6s ease 0.3s backwards;
}

.badge {
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-level {
  background: rgba(0, 242, 255, 0.15);
}

.badge-title {
  background: rgba(255, 255, 255, 0.05);
}

.badge-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #00F2FF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.badge-title .badge-text {
  color: rgba(255, 255, 255, 0.8);
}

/* 数据面板 - 横向毛玻璃卡片 */
.stats-panel {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  animation: fadeInUp 0.6s ease 0.4s backwards;
}

.stat-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  line-height: 1;
}

.stat-highlight {
  color: #00F2FF;
  text-shadow: 0 0 20rpx rgba(0, 242, 255, 0.6);
}

.stat-streak {
  color: #FF6B6B;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== Icon Buttons 行 ===== */
.icon-buttons-row {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.02);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.icon-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.icon-btn:active {
  transform: scale(0.95);
}

.icon-btn-circle {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.icon-btn:active .icon-btn-circle {
  background: rgba(0, 242, 255, 0.15);
  border-color: rgba(0, 242, 255, 0.3);
}

.icon-btn-circle .icon {
  font-size: 36rpx;
  color: #00F2FF;
}

.icon-btn-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== Tab 切换器 ===== */
.tab-switcher {
  display: flex;
  background: rgba(255, 255, 255, 0.02);
  padding: 0 40rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.tab-item {
  flex: 1;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 500;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s ease;
}

.tab-active .tab-text {
  color: #00F2FF;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: #00F2FF;
  border-radius: 2rpx;
  transition: width 0.3s ease;
  box-shadow: 0 0 12rpx rgba(0, 242, 255, 0.6);
}

.tab-active .tab-indicator {
  width: 60rpx;
}

/* ===== Tab 内容区域 ===== */
.tab-content {
  min-height: 600rpx;
}

.content-section {
  padding: 32rpx 40rpx;
  animation: fadeIn 0.4s ease;
}

/* 列表容器 */
.list-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-item {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.list-item:active {
  background: rgba(255, 255, 255, 0.08);
  transform: scale(0.98);
}

.list-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.list-icon .icon {
  font-size: 32rpx;
  color: #00F2FF;
}

.list-icon .icon-check-circle {
  color: #10B981;
}

.list-icon .icon-close-circle {
  color: #FF6B6B;
}

.list-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.list-status {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.status-correct {
  background: rgba(16, 185, 129, 0.15);
  color: #10B981;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.status-wrong {
  background: rgba(255, 107, 107, 0.15);
  color: #FF6B6B;
  border: 1rpx solid rgba(255, 107, 107, 0.3);
}

.status-unlocked {
  background: rgba(0, 242, 255, 0.15);
  color: #00F2FF;
  border: 1rpx solid rgba(0, 242, 255, 0.3);
}

.status-locked {
  background: rgba(255, 255, 255, 0.05);
  color: rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 成就项特殊样式 */
.achievement-item {
  opacity: 1;
}

.achievement-locked {
  opacity: 0.5;
}

.achievement-icon {
  background: linear-gradient(135deg, #00F2FF 0%, #00A8CC 100%);
}

.icon-unlocked {
  box-shadow: 0 4rpx 16rpx rgba(0, 242, 255, 0.4);
}

.icon-locked {
  background: rgba(255, 255, 255, 0.05) !important;
}

.achievement-icon .icon {
  color: #FFFFFF;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 创作者面板 ===== */
.creator-panel {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 20rpx;
}

.creator-lock-icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 16rpx;
}

.creator-lock-icon .icon {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.3);
}

.creator-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.highlight-text {
  color: #00F2FF;
  font-weight: 600;
}

.creator-progress {
  width: 100%;
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar-mini {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill-mini {
  height: 100%;
  background: linear-gradient(90deg, #00F2FF 0%, #00A8CC 100%);
  border-radius: 6rpx;
  transition: width 0.6s ease;
  box-shadow: 0 0 12rpx rgba(0, 242, 255, 0.6);
}

.progress-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-btn {
  margin-top: 16rpx;
  padding: 20rpx 48rpx;
  background: rgba(255, 255, 255, 0.05);
  color: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.creator-btn::after {
  border: none;
}

/* ===== 退出登录 ===== */
.logout-section {
  padding: 40rpx;
}

.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: rgba(255, 107, 107, 0.15);
  transform: scale(0.98);
}

.logout-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B6B;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 更多菜单弹窗 ===== */
.more-overlay {
