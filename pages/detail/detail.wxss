/* pages/detail/detail.wxss - 增强版题目详情页面 */

/* ===== 容器 ===== */
.detail-container {
  width: 100%;
  min-height: 100vh;
  background-color: #F8F9FA;
}

.detail-scroll {
  width: 100%;
  height: 100vh;
}

.detail-content {
  padding: 40rpx;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
  box-shadow: 0 0 20rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #9CA3AF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  animation: fadeIn 0.3s ease-out;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.error-text {
  font-size: 28rpx;
  color: #6B7280;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: slideInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn {
  padding: 20rpx 60rpx;
  background: #3B82F6;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  background: #2563EB;
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* ===== 页面标题 ===== */
.page-header {
  margin-bottom: 40rpx;
  animation: slideInDown 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  display: block;
  margin-bottom: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.page-subtitle {
  font-size: 24rpx;
  color: #9CA3AF;
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 通用区块样式 ===== */
.section-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #6B7280;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 内容区域 ===== */
.content-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s backwards;
}

.content-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.content-card:active {
  transform: scale(0.99);
}

.quote-icon {
  font-size: 80rpx;
  color: #D8D8D8;
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
  margin-bottom: -10rpx;
  display: block;
  animation: fadeIn 0.4s ease-out;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.7;
  color: #1F2937;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: block;
  animation: fadeIn 0.5s ease-out 0.2s backwards;
}

/* 图片卡片 */
.image-card {
  padding: 0;
  background: transparent;
  box-shadow: none;
}

.content-image-wrapper {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.12);
  background: #F5F5F5;
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.content-image-wrapper:active {
  transform: scale(0.99);
}

.content-image {
  width: 100%;
  max-height: 600rpx;
  display: block;
  animation: fadeIn 0.5s ease-out;
}

/* 视频卡片 */
.video-card {
  padding: 0;
  background: transparent;
  box-shadow: none;
}

.content-video {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background: #000000;
}

/* ===== 答案区域 ===== */
.answer-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.answer-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: center;
  align-items: center;
}

.answer-badge {
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.answer-ai {
  background: #FEE2E2;
  color: #EF4444;
}

.answer-human {
  background: #DBEAFE;
  color: #3B82F6;
}

/* ===== 统计区域 ===== */
.stats-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.stats-bar {
  display: flex;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.stat-ai {
  background: #EF4444;
}

.stat-human {
  background: #3B82F6;
}

.stat-text {
  font-size: 26rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 解析区域 ===== */
.explanation-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.explanation-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.explanation-card:active {
  transform: scale(0.99);
}

.explanation-text {
  font-size: 28rpx;
  line-height: 1.7;
  color: #374151;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部按钮 ===== */
.bottom-actions {
  margin-bottom: 40rpx;
  animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background: #3B82F6;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  background: #2563EB;
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
