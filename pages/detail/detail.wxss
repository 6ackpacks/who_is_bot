/* pages/detail/detail-enhanced.wxss - 增强版题目详情 */

/* ===== 容器 ===== */
.detail-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0A0F1E 50%, #0F1419 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.detail-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 50% 20%, rgba(0, 212, 255, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 50% 80%, rgba(0, 212, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

/* 赛博朋克网格背景 */
.detail-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    linear-gradient(rgba(0, 212, 255, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 212, 255, 0.05) 1px, transparent 1px);
  background-size: 50rpx 50rpx;
  pointer-events: none;
  opacity: 0.6;
}

.detail-scroll {
  width: 100%;
  height: 100vh;
}

.detail-content {
  padding: 40rpx;
}

/* ===== 加载状态 ===== */
.loading-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  border: 8rpx solid rgba(0, 212, 255, 0.2);
  border-top-color: #00D4FF;
  border-radius: 50%;
  animation: spin 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite;
  margin-bottom: 40rpx;
  box-shadow: 0 0 30rpx rgba(0, 212, 255, 0.4);
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-family: "PingFang SC", -apple-system, sans-serif;
  animation: pulse 2s ease-in-out infinite;
}

/* ===== 错误状态 ===== */
.error-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

.retry-btn {
  padding: 24rpx 60rpx;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.retry-btn::after {
  border: none;
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 212, 255, 0.3);
}

/* ===== 页面标题 ===== */
.page-header {
  margin-bottom: 40rpx;
  animation: slideInDown 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  display: block;
  margin-bottom: 12rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
  text-shadow: 0 0 30rpx rgba(0, 212, 255, 0.5);
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  display: block;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 通用区块样式 ===== */
.section-label {
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 内容区域 ===== */
.content-section {
  margin-bottom: 40rpx;
  animation: scaleIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
}

.content-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 2rpx solid rgba(0, 212, 255, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.content-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.6), transparent);
}

.quote-icon {
  font-size: 60rpx;
  color: rgba(0, 212, 255, 0.15);
  font-family: Georgia, serif;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 16rpx;
  display: block;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.95);
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: block;
}

/* 图片卡片 */
.image-card {
  padding: 0;
  background: transparent;
  backdrop-filter: none;
  border: none;
  box-shadow: none;
}

.content-image-wrapper {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.4),
    0 0 0 2rpx rgba(0, 212, 255, 0.3);
  background: rgba(0, 0, 0, 0.3);
  position: relative;
}

.content-image-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 212, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.content-image {
  width: 100%;
  max-height: 600rpx;
  display: block;
}

/* 视频卡片 */
.video-card {
  padding: 0;
  background: transparent;
  backdrop-filter: none;
  border: none;
  box-shadow: none;
}

.content-video {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background: #000000;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.4),
    0 0 0 2rpx rgba(0, 212, 255, 0.3);
}

/* ===== 答案区域 ===== */
.answer-section {
  margin-bottom: 40rpx;
  animation: scaleIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
}

.answer-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 2rpx solid rgba(0, 212, 255, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.answer-badge {
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  font-family: "PingFang SC", -apple-system, sans-serif;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.answer-ai {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #FFFFFF;
}

.answer-human {
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  color: #000000;
}

/* ===== 统计区域 ===== */
.stats-section {
  margin-bottom: 40rpx;
  animation: scaleIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
}

.stats-bar {
  display: flex;
  height: 72rpx;
  border-radius: 36rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.stat-item {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shimmer 2s infinite;
}

.stat-ai {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
}

.stat-human {
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
}

.stat-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "PingFang SC", -apple-system, sans-serif;
  position: relative;
  z-index: 1;
}

/* ===== 解析区域 ===== */
.explanation-section {
  margin-bottom: 40rpx;
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
}

.explanation-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 2rpx solid rgba(0, 212, 255, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.explanation-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.6), transparent);
}

.explanation-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  font-family: "PingFang SC", -apple-system, sans-serif;
}

/* ===== 底部按钮 ===== */
.bottom-actions {
  margin-bottom: 40rpx;
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.6s backwards;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #00D4FF 0%, #0096CC 100%);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  border: none;
  font-family: "PingFang SC", -apple-system, sans-serif;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 212, 255, 0.3);
}

/* ===== 底部占位 ===== */
.bottom-spacer {
  height: 100rpx;
}
